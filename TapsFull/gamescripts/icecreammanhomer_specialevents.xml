<SpecialEvents>
	<SpecialEvent id="123000" name="IceCreamManHomer_Promo_SpecialEvent" character="PromoGilPermanent">
		<Characters override="true">
			<Character name="PromoGilPermanent">
				<OnEvent event="CharacterTouched" user="local">
					<Requirement type="variable" variable="IceCreamManHomer_Promo_INDICATOR_ACTIVE" />
					<Script name="IceCreamManHomer_Promo_Display" package="IceCreamManHomer_Scripts" />
				</OnEvent>
				<SpecialIndicator icon="indicator_IceCreamHomer">
					<Requirements>
						<Requirement type="variable" variable="IceCreamManHomer_Promo_INDICATOR_ACTIVE" />
						<Requirement type="active quest" quest="IceCreamManHomer_Promo_Quest_Trigger" />
					</Requirements>
				</SpecialIndicator>
			</Character>
		</Characters>
		<OnEvent event="LandVisited" user="local" ignoreTypeCheck="true">
			<Requirements>
				<Requirement type="active quest" quest="IceCreamManHomer_Promo_Quest" />
			</Requirements>
			<Script name="IceCreamManHomer_Promo_Recommend" package="IceCreamManHomer_Scripts" />
		</OnEvent>
		<Variable name="IceCreamManHomer_Promo_INDICATOR_ACTIVE" value="true" />
		<Variable name="PROMO_STARTED" value="true" />
		<Variable name="PROMO_SHOW_IN_BUILD_MENU" value="false" />
		<Promo eventName="IceCreamManHomer_Promo_SpecialEvent" questID="123005" type="building" object="IceCreamTruck" file="Promo_IceCreamHomer" yes="BTN_120Donuts" visualEndDate="ICMHomer_Promo_EndDate" />
		<Variable name="ICMH_Promo_Active" value="true" />
	</SpecialEvent>
	<SpecialEvent id="123001" name="IceCreamTruck_PostSkinReward">
		<Buildings override="true">
			<Building name="IceCreamTruck">
				<StorePositioningRule rule="IceCreamTruckRule_PostSkinReward" />
			</Building>
		</Buildings>
	</SpecialEvent>
</SpecialEvents>