<Attributes>
	<Notifications>
		<Notification name="MaxElvesPN" type="spawnAtCapacity" character="Xmas014_BadElf">
			<EvaluationRequirements>
				<Requirement type="players land" />
				<Requirement type="land" land="Springfield" />
			</EvaluationRequirements>
			<TriggeringRequirements>
				<Requirement type="config" key="XMAS2014_GameConfig:Enable:MaxElvesPN" value="1" />
			</TriggeringRequirements>
			<UpdateEvents>
				<Event event="EnterState" />
				<Event event="CharactersGained" />
				<Event event="CharacterGained" />
				<Event event="CharacterLost" />
			</UpdateEvents>
		</Notification>
		<Notification name="DailyComboExpirePN" type="inactivity" threshold="48h">
			<EvaluationRequirements>
				<Requirement type="players land" />
				<Requirement type="land" land="Springfield" />
			</EvaluationRequirements>
			<TriggeringRequirements>
				<Requirement type="config" key="XMAS2014_GameConfig:Enable:DailyComboPN" value="1" />
			</TriggeringRequirements>
			<UpdateEvents>
				<Event event="DailyBonusUpdate" />
			</UpdateEvents>
		</Notification>
		<Notification name="FederalAgentsPN" type="friendEvent">
			<TriggeringRequirements>
				<Requirement type="config" key="XMAS2014_GameConfig:Enable:DailyComboPN" value="1" />
				<Requirement type="formula" formula="System::evaluate('Character::FederalAgent::TotalCount')==2" />
			</TriggeringRequirements>
			<UpdateEvents>
				<Event event="AddFriendTimedCharacter" />
			</UpdateEvents>
		</Notification>
	</Notifications>
</Attributes>