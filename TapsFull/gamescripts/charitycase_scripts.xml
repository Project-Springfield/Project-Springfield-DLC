<ScriptPackage>
	<ShowEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="CharityCaseMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="CharityCase_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="CharityCase_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="CharityCase_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="CharityCase_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_CharityCase_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_CharityCase_IntroPanelFooter" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_CharityCase_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_CharityCase_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_CharityCase_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="CharityCase_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="CharityCase_Store" value="true" />
		<Action type="recommendation" recType="Event" name="CharityCase_CharityCase_OnePanel" eventName="UI_CharityCase_Title" limitedTime="true" limitedTimeEndDate="CharityCase_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="CharityCaseMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_CharityCase_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_CharityCase_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_CharityCase_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_CharityCase_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="notificationLarge" title="CON_ShatteredDreamsMysteryBox_name" button="UI_OK" text="UI_ShatteredDreams_notif" icon="ICO_STOR_Single_ShatteredDreams_MysteryBox" />
		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Entertainment" limitedTime="true" limitedTimeEndDate="CharityCase_End" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Entertainment" fromInventory="false" />
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_CharityCase_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="CharityCase_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="CharityCase_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="CharityCase_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="CharityCase_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="CharityCase_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_CharityCase_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="CharityCase_OnePanel" />
		<Action type="runScript" script="CharityCase_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="CharityCase_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="CharityCase_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="CharityCase_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="ColdAsCharity_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="CharityCase_Event" />
									<Attribute name="JobList" value="CharityCase_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="ColdAsCharity_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="CharityCase_Event" />
									<Attribute name="JobList" value="CharityCase_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="ColdAsCharity_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="CharityCase_Event" />
									<Attribute name="JobList" value="CharityCase_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="ColdAsCharity_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="CharityCase_Event" />
									<Attribute name="JobList" value="CharityCase_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="ColdAsCharity_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="CharityCase_Event" />
									<Attribute name="JobList" value="CharityCase_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="CharityCase_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="CharityCase_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<RecommendStoreCategory_CharityCase ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="CharityCase_CharityCase_OnePanel" />
		<Action type="recommendation" recType="Event" name="CharityCase_CharityCase_OnePanel" eventName="UI_CharityCase_Title" limitedTime="true" limitedTimeEndDate="CharityCase_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_CharityCase>
	<EnterStoreCategory_CharityCase ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="CharityCase_Category" />
	</EnterStoreCategory_CharityCase>
	<CharityCase_MTX_DisplayPromo ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="Currency" itemName="CharityCase_TrayOf132Donuts" />
	</CharityCase_MTX_DisplayPromo>
	<PreachEnlightenment_Complete>
		<Action type="anim-play" character="BuddhaHomer" animation="Victory_Pose_Donut" />
		<Action type="anim-waitforend" />
		<Action type="reward" donuts="1" money="1" xp="1" />
	</PreachEnlightenment_Complete>
	<PreachEnlightenment_End>
		<Action type="setLocalVariable" variable="PE_DonutChance" value="rand(10)" />
		<Action type="if">
			<If expression="greaterThanEQ(PE_DonutChance, 9)">
				<Then>
					<Action type="anim-play" character="BuddhaHomer" animation="Victory_Pose_Donut" />
					<Action type="anim-waitforend" />
					<Action type="reward" donuts="1" money="1" xp="1" />
				</Then>
			</If>
			<Else>
				<Then>
					<Action type="anim-play" character="BuddhaHomer" animation="Victory_Pose" />
					<Action type="anim-waitforend" />
					<Action type="reward" money="1" xp="1" />
				</Then>
			</Else>
		</Action>
	</PreachEnlightenment_End>
</ScriptPackage>