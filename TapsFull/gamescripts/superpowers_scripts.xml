<ScriptPackage>
	<ShowMiniEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="SuperPowersMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="SuperPowers_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="SuperPowers_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="SuperPowers_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="SuperPowers_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_SuperPowers_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_SuperPowers_IntroPanel_Timer" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_SuperPowers_IntroPanel_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_SuperPowers_IntroPanel_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn3">
					<Attribute name="text" value="UI_SuperPowers_IntroPanel_3" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_SuperPowers_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="SuperPowers_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="SuperPowers_Store_Unlocked" value="true" />
		<Action type="recommendation" recType="Event" name="SuperPowers_OnePanel" eventName="UI_SuperPowers_Title" limitedTime="true" limitedTimeEndDate="SuperPowers_End" />
		<Action type="reparseBuildMenu" />
	</ShowMiniEventIntro>
	<ShowMiniEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="SuperPowersMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_SuperPowers_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_SuperPowers_OutroPanel_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_SuperPowers_OutroPanel_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_SuperPowers_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="SuperPowers_Complete" boolValue="true" />
	</ShowMiniEventOutro>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="gotoState" state="GameState_QuestProgress">
					<Extras>
						<Attribute name="questParentDelegate" value="SuperPowers_MasterQuest" />
					</Extras>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="PriceOfPower_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SuperPowers_Event" />
									<Attribute name="JobList" value="SuperPowers_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="conditional" logic="OR">
							<Requirement type="active quest" quest="PriceOfPower_2" />
							<Requirement type="active quest" quest="PriceOfPower_2_NoRodAndTodd" />
						</Requirement>
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SuperPowers_Event" />
									<Attribute name="JobList" value="SuperPowers_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PriceOfPower_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SuperPowers_Event" />
									<Attribute name="JobList" value="SuperPowers_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PriceOfPower_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SuperPowers_Event" />
									<Attribute name="JobList" value="SuperPowers_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PriceOfPower_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SuperPowers_Event" />
									<Attribute name="JobList" value="SuperPowers_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PriceOfPower_6" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SuperPowers_Event" />
									<Attribute name="JobList" value="SuperPowers_JL_6" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="variable" variable="SuperPowers_ExpiryDisplayed" />
			<True>
				<Action type="setVariable" boolVariable="SuperPowers_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_SuperPowers_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="SuperPowers_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="SuperPowers_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="SuperPowers_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="SuperPowers_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="SuperPowers_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_SuperPowers_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="SuperPowers_OnePanel" />
		<Action type="setVariable" boolVariable="SuperPowers_ExpiryDisplayed" boolValue="true" />
		<Action type="runScript" script="SuperPowers_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<MiniEventCompleted>
		<Action type="setVariable" boolVariable="SuperPowers_Complete" boolValue="true" />
	</MiniEventCompleted>
	<AutoApply_IronLungSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="SuperPowers_Scripts:AutoApply_IronLungSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_IronLungSkin_End>
	<AutoApply_IronLungSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="IronLung" fromInventory="true" />
	</AutoApply_IronLungSkin_Delayed>
	<AutoApply_TheRamblerSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="SuperPowers_Scripts:AutoApply_TheRamblerSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_TheRamblerSkin_End>
	<AutoApply_TheRamblerSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="TheRambler" fromInventory="true" />
	</AutoApply_TheRamblerSkin_Delayed>
	<EnterStoreCategory ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="SuperPowers_Category" />
	</EnterStoreCategory>
	<GoToIronLung>
		<Action type="checkRequirements">
			<Requirements>
				<Requirement type="characterunlocked" name="HansMoleman" not="true" />
				<Requirement type="characterunlocked" name="HansMoleman" unlockedskin="IronLung" not="true" />
			</Requirements>
			<True>
				<Action type="focusOnMenuItem" menuCategory="SuperPowers_Category" itemName="IronLungWithHansMoleman" />
			</True>
			<False>
				<Action type="checkRequirements">
					<Requirements>
						<Requirement type="characterunlocked" name="HansMoleman" />
						<Requirement type="characterunlocked" name="HansMoleman" unlockedskin="IronLung" not="true" />
					</Requirements>
					<True>
						<Action type="focusOnMenuItem" menuCategory="SuperPowers_Category" itemName="IronLung" />
					</True>
				</Action>
			</False>
		</Action>
	</GoToIronLung>
	<GoToTheRambler>
		<Action type="checkRequirements">
			<Requirements>
				<Requirement type="characterunlocked" name="Grampa" not="true" />
				<Requirement type="characterunlocked" name="Grampa" unlockedskin="TheRambler" not="true" />
			</Requirements>
			<True>
				<Action type="focusOnMenuItem" menuCategory="SuperPowers_Category" itemName="TheRamblerWithAbe" />
			</True>
			<False>
				<Action type="checkRequirements">
					<Requirements>
						<Requirement type="characterunlocked" name="Grampa" />
						<Requirement type="characterunlocked" name="Grampa" unlockedskin="TheRambler" not="true" />
					</Requirements>
					<True>
						<Action type="focusOnMenuItem" menuCategory="SuperPowers_Category" itemName="TheRambler" />
					</True>
				</Action>
			</False>
		</Action>
	</GoToTheRambler>
</ScriptPackage>