<Attributes>
	<Enable cache="true">
		<Attribute name="IRSBuilding" value="true" />
	</Enable>
	<TaxCollectRadius>
		<Attribute name="InRadius" formula="System::evaluate('Selector::IRSInRadiusSelector')" />
		<Attribute name="RadiusAsMax" formula="max(2,System::evaluate('Selector::IRSInRadiusSelector'))" />
		<Attribute name="IndicatorsOnly" value="false" />
	</TaxCollectRadius>
	<TaxCollect>
		<Attribute name="TaxRate" value="0" />
	</TaxCollect>
	<Formulas>
		<Attribute name="MoneyXPBonusPerLevel" value="0" />
	</Formulas>
	<LevelUpMenu>
		<Attribute name="enabled" value="true" />
		<Attribute name="displayOnly" value="false" />
		<Attribute>
			<Requirements>
				<Requirement type="players land" not="true" />
			</Requirements>
			<Attribute name="displayOnly" value="true" />
		</Attribute>
		<Attribute name="turnOnGetMoreUI" value="false" />
		<Attribute name="turnOnTopUpUI" value="false" />
		<Attribute name="turnOnTopUpGrindCurrencyUI" value="true" />
		<Attribute name="maxLevel" value="9" />
		<Attribute name="useObjectVariable" value="Object::IRSBuildingLevel" />
		<Attribute name="currentLevel" formula="Object::IRSBuildingLevel+1" />
		<Attribute name="nextLevel" formula="Object::IRSBuildingLevel+2" />
		<Attribute name="closeMenuAfterUpgrade" value="true" />
		<Attribute name="soundOnLevelUpButtonPress" value="upgrade_castle.caf" />
		<Attribute name="upgradeButtonColorOverride" value="true" />
		<Attribute name="levelUpImage" value="ICO_MHUD_IRSHand.rgb" />
		<Cost money="selector IRSCost" />
		<Attribute name="onLevelUpgradeScript" value="IRSBuilding_Scripts:OnUpgradedIRSBuilding" />
		<Attribute name="maxLevelText" value="UI_IRSBuilding_MaxLevel" />
		<Attribute name="useMaxLevel3Lines" value="true" />
		<Attribute name="levelTextLine1" value="UI_BuildingLevelWithColon" localise="true" parameters="levelTextLine1">
			<AttributeSet name="levelTextLine1">
				<Attribute name="0" pointer="currentLevel" />
			</AttributeSet>
		</Attribute>
		<Attribute name="levelTextLine3" value="UI_UpgradeToNextLevel" localise="true" parameters="levelTextLine3">
			<AttributeSet name="levelTextLine3">
				<Attribute name="0" pointer="nextLevel" />
			</AttributeSet>
		</Attribute>
		<Attribute name="NextLevelText" value="UI_IRSBuilding_NextLevelRadius" localise="true" />
		<Attribute name="levelTextLine4" pointer="NextLevelText" localise="true" parameters="levelTextData">
			<AttributeSet name="levelTextData">
				<Attribute name="0" value="0" />
			</AttributeSet>
		</Attribute>
	</LevelUpMenu>
</Attributes>