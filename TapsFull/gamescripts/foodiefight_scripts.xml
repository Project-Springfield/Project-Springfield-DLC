<ScriptPackage>
	<ShowEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="FoodieFightMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="FoodieFight_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="FoodieFight_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="FoodieFight_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="FoodieFight_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_FoodieFight_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_FoodieFight_IntroPanelFooter" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_FoodieFight_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_FoodieFight_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_FoodieFight_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="FoodieFight_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="FoodieFight_Store" value="true" />
		<Action type="recommendation" recType="Event" name="FoodieFight_FoodieFight_OnePanel" eventName="UI_FoodieFight_Title" limitedTime="true" limitedTimeEndDate="FoodieFight_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="FoodieFightMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_FoodieFight_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_FoodieFight_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_FoodieFight_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_FoodieFight_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_FoodieFight_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="FoodieFight_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="FoodieFight_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="FoodieFight_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="FoodieFight_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="FoodieFight_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_FoodieFight_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="FoodieFight_OnePanel" />
		<Action type="runScript" script="FoodieFight_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="FoodieFight_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="FoodieFight_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="FoodieFight_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="FlopChef_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="FoodieFight_Event" />
									<Attribute name="JobList" value="FoodieFight_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="FlopChef_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="FoodieFight_Event" />
									<Attribute name="JobList" value="FoodieFight_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="FlopChef_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="FoodieFight_Event" />
									<Attribute name="JobList" value="FoodieFight_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="FlopChef_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="FoodieFight_Event" />
									<Attribute name="JobList" value="FoodieFight_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="FlopChef_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="FoodieFight_Event" />
									<Attribute name="JobList" value="FoodieFight_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="FoodieFight_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="FoodieFight_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<RecommendStoreCategory_FoodieFight ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="FoodieFight_FoodieFight_OnePanel" />
		<Action type="recommendation" recType="Event" name="FoodieFight_FoodieFight_OnePanel" eventName="UI_FoodieFight_Title" limitedTime="true" limitedTimeEndDate="FoodieFight_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_FoodieFight>
	<EnterStoreCategory_FoodieFight ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="FoodieFight_Category" />
	</EnterStoreCategory_FoodieFight>
	<RocketPigs_MakeAMeatAngel parallel="true">
		<Action type="setObjectVariable" variable="MakeAMeatAngelActive" value="1" allowOrphan="false" onType="building" onObject="RocketPigs" />
		<Action type="anim-play" onBuilding="RocketPigs" animation="Neutral" />
	</RocketPigs_MakeAMeatAngel>
	<RocketPigs_MakeAMeatAngelDone parallel="true">
		<Action type="setObjectVariable" variable="MakeAMeatAngelActive" value="0" allowOrphan="false" onType="building" onObject="RocketPigs" />
		<Action type="anim-play" onBuilding="RocketPigs" animation="Neutral" />
	</RocketPigs_MakeAMeatAngelDone>
	<ChiliBlasters_EatChili parallel="true">
		<Action type="setObjectVariable" variable="EatChiliActive" value="1" allowOrphan="false" onType="building" onObject="ChiliBlasters" />
		<Action type="anim-play" onBuilding="ChiliBlasters" animation="Neutral" />
	</ChiliBlasters_EatChili>
	<ChiliBlasters_EatChiliDone parallel="true">
		<Action type="setObjectVariable" variable="EatChiliActive" value="0" allowOrphan="false" onType="building" onObject="ChiliBlasters" />
		<Action type="anim-play" onBuilding="ChiliBlasters" animation="Neutral" />
	</ChiliBlasters_EatChiliDone>
	<SpringfieldBBQFestActiveDone parallel="true" ignoreHUD="true">
		<Action type="anim-play" animation="SpringfieldBBQFestSouthNeutral" onBuilding="SpringfieldBBQFestSouth" isController="true" />
		<Action type="anim-play" animation="SpringfieldBBQFestEastNeutral" onBuilding="SpringfieldBBQFestEast" isController="true" />
		<Action type="anim-play" animation="SpringfieldBBQFestWestNeutral" onBuilding="SpringfieldBBQFestWest" isController="true" />
		<Action type="anim-play" animation="SpringfieldBBQFestMidNeutral" onBuilding="SpringfieldBBQFestMid" isController="true" />
	</SpringfieldBBQFestActiveDone>
</ScriptPackage>