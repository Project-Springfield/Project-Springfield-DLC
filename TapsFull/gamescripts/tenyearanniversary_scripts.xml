<ScriptPackage>
	<DonutStatue_Tapped>
		<Action type="if">
			<If expression="lessThanEQ(DonutStatue_Tapped,10)">
				<Then>
					<Action type="updateVariable" variable="DonutStatue_Tapped" value="DonutStatue_Tapped + 1" />
					<Action type="if">
						<If expression="lessThanEQ(DonutStatue_Tapped,10)">
							<Then>
								<Action type="reward" donuts="1" />
							</Then>
						</If>
					</Action>
					<Action type="if">
						<If expression="DonutStatue_Tapped==3">
							<Then>
								<Action type="setBuildingSkin" building="DonutStatue" skinName="DonutStatue_Break1" />
							</Then>
						</If>
						<ElseIf expression="DonutStatue_Tapped==5">
							<Then>
								<Action type="setBuildingSkin" building="DonutStatue" skinName="DonutStatue_Break2" />
							</Then>
						</ElseIf>
						<ElseIf expression="DonutStatue_Tapped==7">
							<Then>
								<Action type="setBuildingSkin" building="DonutStatue" skinName="DonutStatue_Break3" />
							</Then>
						</ElseIf>
						<ElseIf expression="DonutStatue_Tapped==9">
							<Then>
								<Action type="setBuildingSkin" building="DonutStatue" skinName="DonutStatue_Break4" />
							</Then>
						</ElseIf>
						<ElseIf expression="DonutStatue_Tapped==10">
							<Then>
								<Action type="setBuildingSkin" building="DonutStatue" skinName="FrostedDonutStatue" />
							</Then>
						</ElseIf>
						<ElseIf expression="DonutStatue_Tapped==11">
							<Then>
								<Action type="setBuildingSkin" building="DonutStatue" skinName="BittenDonutStatue" />
							</Then>
						</ElseIf>
					</Action>
				</Then>
			</If>
		</Action>
	</DonutStatue_Tapped>
</ScriptPackage>