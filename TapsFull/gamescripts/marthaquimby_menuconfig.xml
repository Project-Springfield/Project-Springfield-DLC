<Attributes>
	<UpGradeablePoolMenu>
		<Attribute>
			<Requirements>
				<Requirement type="conditional" logic="OR">
					<Requirement type="players land" not="true" />
					<Requirement type="variable" variable="Object::BuildingLevel" count="2" />
				</Requirement>
			</Requirements>
			<Attribute name="displayOnly" value="true" />
			<Attribute name="displayOnlyFormat" value="2LineWithImage" />
		</Attribute>
		<Attribute name="enabled" value="true">
			<Requirements>
				<Requirement type="conditional" logic="OR" not="true">
					<Requirement type="players land" not="true" />
					<Requirement type="variable" variable="Object::BuildingLevel" count="2" />
				</Requirement>
			</Requirements>
		</Attribute>
		<Attribute name="maxLevel" value="3" />
		<Attribute name="currentLevel" formula="Object::BuildingLevel" />
		<Attribute name="nextLevel" formula="Object::BuildingLevel+1" />
		<Attribute name="useObjectVariable" value="Object::BuildingLevel" />
		<Attribute name="currentLevelUI" formula="Object::BuildingLevel+1" />
		<Attribute name="nextLevelUI" formula="Object::BuildingLevel+2" />
		<Attribute name="closeMenuAfterUpgrade" value="true" />
		<Attribute name="levelTextLine1" value="UI_PoolLevelUpgradeMenu" localise="true" parameters="levelTextLine1">
			<AttributeSet name="levelTextLine1">
				<Attribute name="0" pointer="currentLevelUI" />
			</AttributeSet>
		</Attribute>
		<Attribute name="levelTextLine2" value="UI_Quimby_UpgradeablePool_NextLvl" localise="true" parameters="levelTextLine2">
			<AttributeSet name="levelTextLine2">
				<Attribute name="0" pointer="nextLevelUI" />
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="0" />
					</Requirements>
					<Attribute name="1" pointer="BLD_GroundPool_name" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="1" />
					</Requirements>
					<Attribute name="1" pointer="BLD_ModernPool_name" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="2" />
					</Requirements>
					<Attribute name="1" pointer="BLD_ExclusivePool_name" />
				</Attribute>
			</AttributeSet>
		</Attribute>
		<Attribute name="maxLevelText" value="UI_MaxPoolLevelText_name" />
		<Attribute name="turnOnGetMoreUI" value="true" />
		<Attribute name="upgradeButtonColorOverride" value="true" />
		<Attribute name="headerCurrencies">
			<AttributeSet>
				<Attribute name="currency" value="money" />
			</AttributeSet>
		</Attribute>
		<Attribute name="CurrencyBarFontSize" value="eFont_SmallBold" />
		<Attribute name="NextLevelText" value="{0}" localise="true" parameters="levelTextLine3">
			<AttributeSet name="levelTextLine3">
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="0" />
					</Requirements>
					<Attribute name="0" value="UI_PoolUpgradeMenu_ModernDesc" localise="true" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="1" />
					</Requirements>
					<Attribute name="0" value="UI_PoolUpgradeMenu_ExclusiveDesc" localise="true" />
				</Attribute>
			</AttributeSet>
		</Attribute>
		<Attribute>
			<Cost money="(Object::BuildingLevel+1)*10000" />
			<Attribute>
				<Attribute name="levelTextLine3" pointer="NextLevelText" localise="true" parameters="levelTextData">
					<AttributeSet name="levelTextData">
						<Attribute name="0" value="0" />
					</AttributeSet>
				</Attribute>
				<Attribute name="levelTextLine4Image" pointer="ratingImage" />
			</Attribute>
		</Attribute>
		<Attribute name="onLevelUpgradeScript" value="MarthaQuimby_Scripts:UpgradeUpgradeablePool" />
		<Attribute name="levelUpIcon" value="Indicator_Super15_UpgradeHQ.rgb" />
		<Attribute name="levelUpImage" pointer="levelUpIcon" />
		<Attribute>
			<Requirements>
				<Requirement type="variable" variable="Object::BuildingLevel" count="2" />
			</Requirements>
			<Attribute name="levelTextLine2" value="UI_MaxPoolLevelText_name" localise="true" />
		</Attribute>
	</UpGradeablePoolMenu>
	<UpgradeablePoolMenus>
		<Attribute name="menus">
			<AttributeSet name="inventory">
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="0" />
					</Requirements>
					<Attribute name="image" value="GroundPool" />
					<Attribute name="customName" value="BLD_GroundPool_name" localise="true" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="1" />
					</Requirements>
					<Attribute name="image" value="ModernPool" />
					<Attribute name="customName" value="BLD_ModernPool_name" localise="true" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="2" />
					</Requirements>
					<Attribute name="image" value="ExclusivePool" />
					<Attribute name="customName" value="BLD_ExclusivePool_name" localise="true" />
				</Attribute>
			</AttributeSet>
		</Attribute>
		<Attribute name="customStatusTitle" value="{0}" localise="true" parameters="messageParams">
			<AttributeSet name="messageParams">
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="0" />
					</Requirements>
					<Attribute name="0" value="UI_GroundPool_Name" localise="true" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="1" />
					</Requirements>
					<Attribute name="0" value="BLD_ModernPool_name" localise="true" />
				</Attribute>
				<Attribute>
					<Requirements>
						<Requirement type="variable" variable="Object::BuildingLevel" count="2" />
					</Requirements>
					<Attribute name="0" value="BLD_ExclusivePool_name" localise="true" />
				</Attribute>
			</AttributeSet>
		</Attribute>
	</UpgradeablePoolMenus>
</Attributes>