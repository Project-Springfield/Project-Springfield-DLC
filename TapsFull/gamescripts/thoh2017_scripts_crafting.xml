<ScriptPackage>
	<UpdateCrafting>
		<Action type="program">
			<Program><![CDATA[#program;
                    while (User::getVariable('THOH2017_CraftingLevel') < User::getVariable('THOH2017_MaxCraftingLevel') && THOH2017_CraftingXP >= toDouble(System::getConfigValue('__THOH2017_GameConfig:Crafting_Targets:CurrentLevel_Target__')))
                    {
                    User::setVariable('THOH2017_CraftingLevel', User::getVariable('THOH2017_CraftingLevel') + 1, true);
                    }
                    
                    var previousTarget = toDouble(System::getConfigValue('__THOH2017_GameConfig:Crafting_Targets:PreviousLevel_Target__'));
                    User::setVariable('THOH2017_MaxCraftProgress', toDouble(System::getConfigValue('__THOH2017_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - previousTarget, true);
                    User::setVariable('THOH2017_CraftProgress', System::evaluate('Spendable::THOH2017_CraftingXP') - previousTarget, true);
                ]]></Program>
		</Action>
	</UpdateCrafting>
	<IncreaseStoreLevel>
		<Action type="if">
			<If expression="THOH2017_CraftingLevel &lt; THOH2017_MaxCraftingLevel">
				<Then>
					<Action type="reward" THOH2017_CraftingXP="toDouble(System::getConfigValue('__THOH2017_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - THOH2017_CraftingXP" />
				</Then>
			</If>
		</Action>
		<Action type="returnToInGameState" />
	</IncreaseStoreLevel>
	<Crafting_Level02>
