				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_TragicMagic_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_TragicMagic_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_TragicMagic_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="TragicMagic_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="TragicMagic_Store" value="true" />
		<Action type="recommendation" recType="Event" name="TragicMagic_TragicMagic_OnePanel" eventName="UI_TragicMagic_Title" limitedTime="true" limitedTimeEndDate="TragicMagic_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="TragicMagicMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_TragicMagic_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_TragicMagic_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_TragicMagic_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_TragicMagic_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="notificationLarge" title="CON_ShatteredDreamsMysteryBox_name" button="UI_OK" text="UI_ShatteredDreams_notif" icon="ICO_STOR_Single_ShatteredDreams_MysteryBox" />
		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Education" limitedTime="true" limitedTimeEndDate="TragicMagic_ShatteredDreams_End" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Education" fromInventory="false" />
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_TragicMagic_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="TragicMagic_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="TragicMagic_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="TragicMagic_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="TragicMagic_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="TragicMagic_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_TragicMagic_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="TragicMagic_OnePanel" />
		<Action type="runScript" script="TragicMagic_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="TragicMagic_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="TragicMagic_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="TragicMagic_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="TheGreatestTrickEverPerformed_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TragicMagic_Event" />
									<Attribute name="JobList" value="TragicMagic_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatestTrickEverPerformed_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TragicMagic_Event" />
									<Attribute name="JobList" value="TragicMagic_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatestTrickEverPerformed_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TragicMagic_Event" />
									<Attribute name="JobList" value="TragicMagic_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatestTrickEverPerformed_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TragicMagic_Event" />
									<Attribute name="JobList" value="TragicMagic_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatestTrickEverPerformed_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TragicMagic_Event" />
									<Attribute name="JobList" value="TragicMagic_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="TragicMagic_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="TragicMagic_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<AutoApply_TheGreatSimpsinaSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="TragicMagic_Scripts:AutoApply_TheGreatSimpsinaSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_TheGreatSimpsinaSkin_End>
	<AutoApply_TheGreatSimpsinaSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="TheGreatSimpsina" fromInventory="true" />
	</AutoApply_TheGreatSimpsinaSkin_Delayed>
	<RecommendStoreCategory_TragicMagic ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="TragicMagic_TragicMagic_OnePanel" />
		<Action type="recommendation" recType="Event" name="TragicMagic_TragicMagic_OnePanel" eventName="UI_TragicMagic_Title" limitedTime="true" limitedTimeEndDate="TragicMagic_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_TragicMagic>
	<EnterStoreCategory_TragicMagic ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="TragicMagic_Category" />
	</EnterStoreCategory_TragicMagic>
	<TragicMagic_MTX_DisplayPromo ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="Currency" itemName="TragicMagic_TrayOf132Donuts" />
	</TragicMagic_MTX_DisplayPromo>
	<FortuneTellerNotification>
		<Action type="message" text="UI_TragicMagic_FortuneTellerNotification" revealSpeed="medium" />
		<Action type="focusOnMenuItem" itemName="FortuneTeller" inventory="true" />
	</FortuneTellerNotification>
	<GypsyFortuneTellerNotification>
		<Action type="message" text="UI_THOH2014_GypsyShop" revealSpeed="medium" />
		<Action type="focusOnMenuItem" itemName="GypsyFortuneTellerShop" inventory="true" />
	</GypsyFortuneTellerNotification>
</ScriptPackage>