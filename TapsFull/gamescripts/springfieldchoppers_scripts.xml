<ScriptPackage>
	<ShowEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="SpringfieldChoppersMiniEventPopup" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="SpringfieldChoppers_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="SpringfieldChoppers_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="SpringfieldChoppers_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="SpringfieldChoppers_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_SpringfieldChoppers_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_SpringfieldChoppers_IntroPanelFooter" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_SpringfieldChoppers_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_SpringfieldChoppers_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_SpringfieldChoppers_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="SpringfieldChoppers_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="SpringfieldChoppers_Store" value="true" />
		<Action type="recommendation" recType="Event" name="SpringfieldChoppers_SpringfieldChoppers_OnePanel" eventName="UI_SpringfieldChoppers_Title" limitedTime="true" limitedTimeEndDate="SpringfieldChoppers_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="SpringfieldChoppersMiniEventPopup" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_SpringfieldChoppers_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_SpringfieldChoppers_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_SpringfieldChoppers_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_SpringfieldChoppers_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_SpringfieldChoppers_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="SpringfieldChoppers_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="SpringfieldChoppers_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="SpringfieldChoppers_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="SpringfieldChoppers_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="SpringfieldChoppers_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_SpringfieldChoppers_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="SpringfieldChoppers_OnePanel" />
		<Action type="runScript" script="SpringfieldChoppers_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="SpringfieldChoppers_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="SpringfieldChoppers_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="SpringfieldChoppers_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="SpringfieldTurfWars_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SpringfieldChoppers_Event" />
									<Attribute name="JobList" value="SpringfieldChoppers_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="SpringfieldTurfWars_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SpringfieldChoppers_Event" />
									<Attribute name="JobList" value="SpringfieldChoppers_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="SpringfieldTurfWars_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SpringfieldChoppers_Event" />
									<Attribute name="JobList" value="SpringfieldChoppers_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="SpringfieldTurfWars_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SpringfieldChoppers_Event" />
									<Attribute name="JobList" value="SpringfieldChoppers_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="SpringfieldTurfWars_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SpringfieldChoppers_Event" />
									<Attribute name="JobList" value="SpringfieldChoppers_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="SpringfieldChoppers_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="SpringfieldChoppers_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<RecommendStoreCategory_SpringfieldChoppers ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="SpringfieldChoppers_SpringfieldChoppers_OnePanel" />
		<Action type="recommendation" recType="Event" name="SpringfieldChoppers_SpringfieldChoppers_OnePanel" eventName="UI_SpringfieldChoppers_Title" limitedTime="true" limitedTimeEndDate="SpringfieldChoppers_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_SpringfieldChoppers>
	<EnterStoreCategory_SpringfieldChoppers ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="SpringfieldChoppers_Category" />
	</EnterStoreCategory_SpringfieldChoppers>
	<HomersMotorcycle_TestOutTheHog parallel="true">
		<Action type="setObjectVariable" variable="TestOutTheHogActive" value="1" allowOrphan="false" onType="building" onObject="HomersMotorcycle" />
		<Action type="anim-play" onBuilding="HomersMotorcycle" animation="Neutral" />
	</HomersMotorcycle_TestOutTheHog>
	<HomersMotorcycle_TestOutTheHogDone parallel="true">
		<Action type="setObjectVariable" variable="TestOutTheHogActive" value="0" allowOrphan="false" onType="building" onObject="HomersMotorcycle" />
		<Action type="anim-play" onBuilding="HomersMotorcycle" animation="Neutral" />
	</HomersMotorcycle_TestOutTheHogDone>
	<SpringfieldChoppers_MTX_DisplayPromo ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="Currency" itemName="SpringfieldChoppers_TrayOfDonuts" />
	</SpringfieldChoppers_MTX_DisplayPromo>
</ScriptPackage>