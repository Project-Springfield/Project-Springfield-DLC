	<TakeoutBox_Tapped>
		<Action type="program">
			<Program><![CDATA[
					#program;

					var takeoutBox = Land::getFirstInstanceOfObject(Building::find('TakeoutBox'));
					var randVal = toDouble(Object::getVariable(takeoutBox, 'rand'));
					var newRand = rand(22);
					if(randVal!=newRand)
					{
						Object::setVariable(takeoutBox, 'rand', toString(newRand), 0, false);
					}
					else
