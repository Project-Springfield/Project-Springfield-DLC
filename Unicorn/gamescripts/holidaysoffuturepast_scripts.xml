<ScriptPackage>
	<ShowEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="NewYears2020MiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="HolidaysofFuturePast_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="HolidaysofFuturePast_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="HolidaysofFuturePast_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="HolidaysofFuturePast_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_HolidaysofFuturePast_IntroPanelTitle" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_HolidaysofFuturePast_IntroPanel_Timer" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_HolidaysofFuturePast_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_HolidaysofFuturePast_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_NewYears2020_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="HolidaysofFuturePast_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="HolidaysofFuturePast_Store" value="true" />
		<Action type="recommendation" recType="Event" name="HolidaysofFuturePast_OnePanel" eventName="UI_HolidaysofFuturePast_IntroPanelTitle" limitedTime="true" limitedTimeEndDate="HolidaysofFuturePast_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="NewYears2020MiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_HolidaysofFuturePast_IntroPanelTitle" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_HolidaysofFuturePast_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_HolidaysofFuturePast_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_NewYears2020_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_NewYears2020_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="HolidaysofFuturePast_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="HolidaysofFuturePast_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="HolidaysofFuturePast_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="HolidaysofFuturePast_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="HolidaysofFuturePast_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_NewYears2020_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="HolidaysofFuturePast_OnePanel" />
		<Action type="runScript" script="HolidaysofFuturePast_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="HolidaysofFuturePast_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="HolidaysofFuturePast_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="HolidaysofFuturePast_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="HolidaysOfFuturePast_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="HolidaysofFuturePast_Event" />
									<Attribute name="JobList" value="HolidaysofFuturePast_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="HolidaysOfFuturePast_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="HolidaysofFuturePast_Event" />
									<Attribute name="JobList" value="HolidaysofFuturePast_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="HolidaysOfFuturePast_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="HolidaysofFuturePast_Event" />
									<Attribute name="JobList" value="HolidaysofFuturePast_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="HolidaysOfFuturePast_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="HolidaysofFuturePast_Event" />
									<Attribute name="JobList" value="HolidaysofFuturePast_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="HolidaysOfFuturePast_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="HolidaysofFuturePast_Event" />
									<Attribute name="JobList" value="HolidaysofFuturePast_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="HolidaysofFuturePast_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="HolidaysofFuturePast_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<RecommendStoreCategory ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="HolidaysofFuturePast_OnePanel" />
		<Action type="recommendation" recType="Event" name="HolidaysofFuturePast_OnePanel" eventName="UI_HolidaysofFuturePast_IntroPanelTitle" limitedTime="true" limitedTimeEndDate="HolidaysofFuturePast_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory>
	<EnterStoreCategory ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="HolidaysofFuturePast_Category" />
	</EnterStoreCategory>
	<MartianVacation_SingleTap parallel="true" ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="formula" formula="System::evaluate('Job::PoseForMartianPhoto::Active')" />
			<False>
				<Action type="anim-play" animation="Tap" nowait="true" />
			</False>
		</Action>
	</MartianVacation_SingleTap>
	<UltranetActiveDone parallel="true" ignoreHUD="true">
		<Action type="anim-play" animation="UltranetEastNeutral" onBuilding="UltranetEast" isController="true" />
	</UltranetActiveDone>
</ScriptPackage>