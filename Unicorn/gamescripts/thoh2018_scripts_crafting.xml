<ScriptPackage>
	<UpdateCrafting>
		<Action type="program">
			<Program><![CDATA[#program;
                    while (User::getVariable('THOH2018_CraftingLevel') < User::getVariable('THOH2018_MaxCraftingLevel') && THOH2018_CraftingXP >= toDouble(System::getConfigValue('__THOH2018_GameConfig:Crafting_Targets:CurrentLevel_Target__')))
                    {
                        User::setVariable('THOH2018_CraftingLevel', User::getVariable('THOH2018_CraftingLevel') + 1, true);
                    }

                    var previousTarget = toDouble(System::getConfigValue('__THOH2018_GameConfig:Crafting_Targets:PreviousLevel_Target__'));
                    User::setVariable('THOH2018_MaxCraftProgress', toDouble(System::getConfigValue('__THOH2018_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - previousTarget, true);
                    User::setVariable('THOH2018_CraftProgress', System::evaluate('Spendable::THOH2018_CraftingXP') - previousTarget, true);
                ]]></Program>
		</Action>
	</UpdateCrafting>
	<IncreaseStoreLevel>
		<Action type="if">
			<If expression="THOH2018_CraftingLevel &lt; THOH2018_MaxCraftingLevel">
				<Then>
					<Action type="reward" THOH2018_CraftingXP="toDouble(System::getConfigValue('__THOH2018_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - THOH2018_CraftingXP" />
				</Then>
			</If>
		</Action>
		<Action type="returnToInGameState" />
	</IncreaseStoreLevel>
	<Crafting_Level02>
		<Action type="notification" title="UI_AtW_Crafting_LevelUp02" button="UI_OK" text="UI_THOH2018_Crafting_LevelUp" icon="ICO_CUR_THOH2018_CurrencyCrafting_LG" />
		<Action type="if">
			<If expression="lessThan(THOH2018_CraftingXP, toDouble(System::getConfigValue('__THOH2018_BalanceConfig:CraftLevels:Level03_Target__')))">
