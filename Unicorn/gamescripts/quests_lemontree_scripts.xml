<ScriptPackage>
	<StealSuccess>
		<Action type="message" text="LEMON_Steal_Success" revealSpeed="medium" LemonTree="true" />
	</StealSuccess>
	<StealFailure>
		<Action type="message" text="LEMON_Steal_Failure" revealSpeed="medium" />
	</StealFailure>
	<StealSuccessGoHome>
		<Action type="message" text="LEMON_Steal_ReturnHome" revealSpeed="medium" LemonTree="true" />
	</StealSuccessGoHome>
	<AlreadyOwned>
		<Action type="message" text="LEMON_Steal_AlreadyOwned" revealSpeed="medium" />
	</AlreadyOwned>
	<LemonTreePlaced>
		<Action type="message" text="LEMON_Placed" LemonTree="true" />
	</LemonTreePlaced>
	<Stolen>
		<Action type="message" text="LEMON_Stolen" LemonTree="true" />
	</Stolen>
	<ReturnLemonTree>
		<Action type="message" text="LEMON_Stolen_NotUsed" LemonTree="true" />
		<Action type="triggerevent" name="StolenBuildingReturn" data="LemonTree" />
	</ReturnLemonTree>
	<LemonTreeReturned>
		<Action type="message" text="LEMON_Stolen_Returned" LemonTree="true" />
	</LemonTreeReturned>
</ScriptPackage>