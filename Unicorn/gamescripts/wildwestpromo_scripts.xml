<ScriptPackage>
	<BanditFortTaxJobFlip parallel="true">
		<Action type="if">
			<If expression="System::evaluate('Building::BanditFort::Object::TaxJobEventFlip')==0">
				<Then>
					<Action type="setObjectVariable" onType="building" onObject="BanditFort" variable="TaxJobEventFlip" value="1" allowOrphan="false" />
				</Then>
			</If>
			<Else>
				<Then>
					<Action type="setObjectVariable" onType="building" onObject="BanditFort" variable="TaxJobEventFlip" value="0" allowOrphan="false" />
				</Then>
			</Else>
		</Action>
	</BanditFortTaxJobFlip>
	<BanditFort_Tapped parallel="true">
		<Action type="sound" sound="BanditFort_Tap" />
	</BanditFort_Tapped>
</ScriptPackage>