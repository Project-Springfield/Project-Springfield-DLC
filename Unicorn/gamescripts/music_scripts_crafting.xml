<ScriptPackage>
	<UpdateCrafting>
		<Action type="program">
			<Program><![CDATA[#program;
					while (User::getVariable('Music_CraftingLevel') < User::getVariable('Music_MaxCraftingLevel') && Music_CraftingXP >= toDouble(System::getConfigValue('__Music_GameConfig:Crafting_Targets:CurrentLevel_Target__')))
					{
						User::setVariable('Music_CraftingLevel', User::getVariable('Music_CraftingLevel') + 1, true);
					}
					
					var previousTarget = toDouble(System::getConfigValue('__Music_GameConfig:Crafting_Targets:PreviousLevel_Target__'));
					User::setVariable('Music_MaxCraftProgress', toDouble(System::getConfigValue('__Music_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - previousTarget, true);
					User::setVariable('Music_CraftProgress', System::evaluate('Spendable::Music_CraftingXP') - previousTarget, true);
				]]></Program>
		</Action>
	</UpdateCrafting>
	<IncreaseStoreLevel>
		<Action type="if">
			<If expression="Music_CraftingLevel &lt; Music_MaxCraftingLevel">
				<Then>
					<Action type="reward" Music_CraftingXP="toDouble(System::getConfigValue('__Music_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - Music_CraftingXP" />
				</Then>
			</If>
		</Action>
		<Action type="returnToInGameState" />
	</IncreaseStoreLevel>
	<Crafting_Level02>
		<Action type="notification" title="UI_AtW_Crafting_LevelUp02" button="UI_OK" text="UI_Music_Crafting_LevelUp" icon="ICO_CUR_Music_CraftingCurrency_LG" />
		<Action type="if">
			<If expression="lessThan(Music_CraftingXP, toDouble(System::getConfigValue('__Music_Spreadsheet_Config:CraftLevels:Level03_Target__')))">
				<Then>
					<Action type="actionSequence" script="Music_Scripts:Tab_Crafting_ScrollTo">
						<FormatToken key="ItemToScrollTo" value="BLD_WhiteSpotlight_name" />
					</Action>
				</Then>
