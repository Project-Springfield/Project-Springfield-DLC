		<Action type="reward" save="true" AroundTheWorld_SkyCredits="650" suppress_sound="true" />
	</DiaBettyGilPromoPurchased_Start>
	<DiaBettyGilPromoCancelled_Start>
		<Action type="dialogue" character="Cletus" text="QST_DiaBettyGilPromoCancelled_3_dlg_Start_1_Cletus" revealSpeed="medium" emotion="worried" />
