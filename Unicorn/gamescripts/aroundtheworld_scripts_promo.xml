<ScriptPackage>
	<DiaBettyPromo_Start ignoreHUD="true">
		<Action type="createobject" name="PromoGilPermanent" save="true" showUnlock="false" panCamera="true" />
	</DiaBettyPromo_Start>
	<DiaBettyPromo_Recommend ignoreHUD="true">
		<Action type="recommendation" recType="Promoted" name="DiaBetty_Promo" />
	</DiaBettyPromo_Recommend>
	<DiaBettyPromo_Display>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
			<True>
				<Action type="actionSequence" script="AroundTheWorld_Scripts_Promo:DiaBettyGilPromoStart_Start" />
				<Action type="actionSequence" script="AroundTheWorld_Scripts_Promo:DiaBettyPromo_DisplayPromo" />
				<Action type="updateVariable" variable="AroundTheWorld_DiaBettyActive" value="true" />
				<Action type="runScript" script="KillGil" package="MiscScripts" />
			</True>
		</Action>
	</DiaBettyPromo_Display>
	<DiaBettyPromo_DisplayPromo ignoreHUD="true">
		<Action type="gotoState" state="GameState_InGame" />
		<Action type="displayPromo" event="AroundTheWorld_Valentines" />
	</DiaBettyPromo_DisplayPromo>
	<DiaBettyPromo_Purchase>
		<Action type="actionSequence" script="AroundTheWorld_Scripts_Promo:DiaBettyGilPromoPurchased_Start" />
		<Action type="clearRecommendations" category="Promoted" name="DiaBetty_Promo" />
	</DiaBettyPromo_Purchase>
	<DiaBettyPromo_Cancel>
		<Action type="actionSequence" script="AroundTheWorld_Scripts_Promo:DiaBettyPromo_Recommend" />
		<Action type="actionSequence" script="AroundTheWorld_Scripts_Promo:DiaBettyGilPromoCancelled_Start" />
	</DiaBettyPromo_Cancel>
	<DiaBettyGilPromoStart_Start>
		<Action type="dialogue" character="Gil" text="QST_DiaBettyGilPromoStart_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="happy" />
		<Action type="dialogue" character="Gil" text="QST_DiaBettyGilPromoStart_3_dlg_Start_2_Gil" revealSpeed="medium" />
		<Action type="dialogue" character="Cletus" text="QST_DiaBettyGilPromoStart_3_dlg_Start_3_Cletus" revealSpeed="medium" emotion="shocked" />
		<Action type="dialogue" character="Gil" text="QST_DiaBettyGilPromoStart_3_dlg_Start_4_Gil" revealSpeed="medium" />
		<Action type="dialogue" character="Cletus" text="QST_DiaBettyGilPromoStart_3_dlg_Start_5_Cletus" revealSpeed="medium" emotion="smiling" />
	</DiaBettyGilPromoStart_Start>
	<DiaBettyGilPromoPurchased_Start>
		<Action type="dialogue" character="Cletus" text="QST_DiaBettyGilPromoPurchased_3_dlg_Start_1_Cletus" revealSpeed="medium" emotion="smiling" />
		<Action type="dialogue" character="Diabetty" text="QST_DiaBettyGilPromoPurchased_3_dlg_Start_2_Diabetty" revealSpeed="medium" />
		<Action type="dialogue" character="Cletus" text="QST_DiaBettyGilPromoPurchased_3_dlg_Start_3_Cletus" revealSpeed="medium" />
		<Action type="dialogue" character="Diabetty" text="QST_DiaBettyGilPromoPurchased_3_dlg_Start_4_Diabetty" revealSpeed="medium" />
		<Action type="dialogue" character="Diabetty" text="QST_DiaBettyGilPromoPurchased_3_dlg_Start_5_Diabetty" revealSpeed="medium" emotion="happy" />
