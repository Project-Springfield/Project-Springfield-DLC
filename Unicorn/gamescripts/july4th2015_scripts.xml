	</PatrioticBoxOfFireworks_Tapped>
	<July4th2015_StoreRecommend_Start ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirements>
				<Requirement type="quest started" quest="MonetizationLiberation01" />
			</Requirements>
			<True>
				<Action type="recommendation" recType="Event" eventName="UI_July4th2015_title" name="GoToJuly4th2015" />
			</True>
		</Action>
	</July4th2015_StoreRecommend_Start>
	<July4th2015_ClearStoreRecommendations ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirements>
				<Requirement type="time" start="JulyFourthTwentyFifteen_EndDate" />
			</Requirements>
			<True>
				<Action type="clearRecommendations" category="Event" />
			</True>
		</Action>
		<Action type="checkRequirements">
			<Requirement type="time" end="HomerballEnd" />
			<True>
				<Action type="runScript" script="RecommendJune2015" package="June2015_Scripts" />
			</True>
		</Action>
	</July4th2015_ClearStoreRecommendations>
	<EnterJuly4th2015Category>
		<Action type="focusOnMenuItem" menuCategory="July4th2015" />
	</EnterJuly4th2015Category>
	<July4th2015_FlagPositioner_Start parallel="true">
		<Action type="setVariable" boolVariable="FlagInTopRight" boolValue="true" />
	</July4th2015_FlagPositioner_Start>
	<July4th2015_FlagPositioner_End parallel="true">
		<Action type="setVariable" boolVariable="FlagInTopRight" boolValue="false" />
	</July4th2015_FlagPositioner_End>
</ScriptPackage>