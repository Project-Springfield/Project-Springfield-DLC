<ScriptPackage>
	<EnterStoreCategory>
		<Action type="focusOnMenuItem" menuCategory="MarchTieIn2018" />
	</EnterStoreCategory>
	<RecommendStoreCategory>
		<Action type="recommendation" recType="Event" name="MarchTieIn2018_OnePanel" eventName="SET_HomerIsWhereTheArtIsnt_name" limitedTime="true" limitedTimeEndDate="MarchTieIn2018_EndDate" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory>
	<ClearStoreCategoryRecommendation>
		<Action type="clearRecommendations" category="Event" name="MarchTieIn2018_OnePanel" />
		<Action type="reparseBuildMenu" />
	</ClearStoreCategoryRecommendation>
	<GoTo_GavelbysAuctionHouse>
		<Action type="if">
			<If>
				<Requirement type="land" land="Springfield" not="true" />
				<Then>
					<Action type="gotoland" land="Springfield" showPopup="true" />
				</Then>
			</If>
			<ElseIf>
				<Requirement type="place building" building="GavelbysAuctionHouse" />
				<Then>
					<Action type="pantoobject" time="0" building="GavelbysAuctionHouse" fakeTouch="false" />
				</Then>
			</ElseIf>
			<ElseIf>
				<Requirement type="building owned" building="GavelbysAuctionHouse" />
				<Then>
					<Action type="focusOnMenuItem" itemName="GavelbysAuctionHouse" inventory="true" />
				</Then>
			</ElseIf>
			<Else>
				<Then>
					<Action type="focusOnMenuItem" itemName="GavelbysAuctionHouse" menuCategory="MarchTieIn2018" />
				</Then>
			</Else>
		</Action>
	</GoTo_GavelbysAuctionHouse>
	<GoToManacek>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="gotoland" land="Springfield" showPopup="true" />
			</False>
			<True>
				<Action type="checkRequirements">
					<Requirement type="characterunlocked" name="Manacek" />
					<False>
						<Action type="focusOnMenuItem" itemName="ManacekAndBrickTownhomes" menuCategory="MarchTieIn2018" />
					</False>
				</Action>
			</True>
		</Action>
	</GoToManacek>
</ScriptPackage>