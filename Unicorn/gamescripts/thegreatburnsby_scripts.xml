	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="TheGreatBurnsbyMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_TheGreatBurnsby_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_TheGreatBurnsby_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_TheGreatBurnsby_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_TheGreatBurnsby_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="notificationLarge" title="CON_ShatteredDreamsMysteryBox_name" button="UI_OK" text="UI_ShatteredDreams_notif" icon="ICO_STOR_Single_ShatteredDreams_MysteryBox" />
		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Retail" limitedTime="true" limitedTimeEndDate="TheGreatBurnsby_ShatteredDreamsEnd" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Retail" fromInventory="false" />
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_TheGreatBurnsby_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="TheGreatBurnsby_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="TheGreatBurnsby_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="TheGreatBurnsby_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="TheGreatBurnsby_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="TheGreatBurnsby_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_TheGreatBurnsby_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="TheGreatBurnsby_OnePanel" />
		<Action type="runScript" script="TheGreatBurnsby_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="TheGreatBurnsby_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="TheGreatBurnsby_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="TheGreatBurnsby_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="TheGreatBurnsby_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TheGreatBurnsby_Event" />
									<Attribute name="JobList" value="TheGreatBurnsby_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatBurnsby_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TheGreatBurnsby_Event" />
									<Attribute name="JobList" value="TheGreatBurnsby_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatBurnsby_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TheGreatBurnsby_Event" />
									<Attribute name="JobList" value="TheGreatBurnsby_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatBurnsby_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TheGreatBurnsby_Event" />
									<Attribute name="JobList" value="TheGreatBurnsby_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheGreatBurnsby_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="TheGreatBurnsby_Event" />
									<Attribute name="JobList" value="TheGreatBurnsby_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="TheGreatBurnsby_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="TheGreatBurnsby_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<RecommendStoreCategory_TheGreatBurnsby ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="TheGreatBurnsby_TheGreatBurnsby_OnePanel" />
		<Action type="recommendation" recType="Event" name="TheGreatBurnsby_TheGreatBurnsby_OnePanel" eventName="UI_TheGreatBurnsby_Title" limitedTime="true" limitedTimeEndDate="TheGreatBurnsby_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_TheGreatBurnsby>
	<EnterStoreCategory_TheGreatBurnsby ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="TheGreatBurnsby_Category" />
	</EnterStoreCategory_TheGreatBurnsby>
	<TheGreatBurnsby_MTX_DisplayPromo ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="Currency" itemName="TheGreatBurnsby_TrayOf132Donuts" />
	</TheGreatBurnsby_MTX_DisplayPromo>
	<AwardSamLarryFix>
		<Action type="if">
			<If>
				<Requirement type="characterunlocked" name="Sam" not="true" />
				<Then>
					<Action type="reward">
						<Item type="character" name="Sam" useImmediately="true" />
					</Action>
				</Then>
			</If>
		</Action>
		<Action type="if">
			<If>
				<Requirement type="characterunlocked" name="Larry" not="true" />
				<Then>
					<Action type="reward">
						<Item type="character" name="Larry" useImmediately="true" />
					</Action>
				</Then>
			</If>
		</Action>
	</AwardSamLarryFix>
</ScriptPackage>