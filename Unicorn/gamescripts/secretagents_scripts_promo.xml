<ScriptPackage>
	<SecretAgentsPromo_Start ignoreHUD="true">
		<Action type="createobject" name="PromoGilPermanent" save="true" showUnlock="false" panCamera="true" />
	</SecretAgentsPromo_Start>
	<Recommend ignoreHUD="true">
		<Action type="recommendation" recType="Promoted" name="NerdBundle_Promo" />
	</Recommend>
	<SecretAgentsPromo_Display>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
			<True>
				<Action type="actionSequence" script="SecretAgents_Scripts_Promo:StartDialogue" />
				<Action type="actionSequence" script="SecretAgents_Scripts_Promo:DisplayPromo" />
				<Action type="runScript" script="KillGil" package="MiscScripts" />
			</True>
		</Action>
	</SecretAgentsPromo_Display>
	<DisplayPromo ignoreHUD="true">
		<Action type="gotoState" state="GameState_InGame" />
		<Action type="displayPromo" event="SecretAgents_Event" />
	</DisplayPromo>
	<SecretAgentsPromo_Purchase>
		<Action type="actionSequence" script="SecretAgents_Scripts_Promo:PurchasedDialogue" />
		<Action type="clearRecommendations" category="Promoted" name="NerdBundle_Promo" />
	</SecretAgentsPromo_Purchase>
	<SecretAgentsPromo_Cancel>
		<Action type="actionSequence" script="SecretAgents_Scripts_Promo:Recommend" />
		<Action type="actionSequence" script="SecretAgents_Scripts_Promo:CancelledDialogue" />
	</SecretAgentsPromo_Cancel>
	<StartDialogue>
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoStart_3_dlg_Start_1_Gil" revealSpeed="medium" />
	</StartDialogue>
	<PurchasedDialogue>
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoPurchased_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="happy" />
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoPurchased_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="happy" />
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoPurchased_3_dlg_Start_3_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoPurchased_3_dlg_Start_4_Gil" revealSpeed="medium" emotion="annoyed" />
	</PurchasedDialogue>
	<CancelledDialogue>
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoCancelled_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="dialogue" character="Gil" text="QST_UniversityNerdsGilPromoCancelled_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="sad" />
	</CancelledDialogue>
</ScriptPackage>