<ScriptPackage>
	<ShowEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="NewYears2024MiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="NewYears2024_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="NewYears2024_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="NewYears2024_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="NewYears2024_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_NewYears2024_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_NewYears2024_IntroPanelFooter" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_NewYears2024_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_NewYears2024_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_NewYears2024_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="NewYears2024_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="NewYears2024_Store" value="true" />
		<Action type="recommendation" recType="Event" name="NewYears2024_BetterLateThanForever_OnePanel" eventName="UI_NewYears2024_Title" limitedTime="true" limitedTimeEndDate="NewYears2024_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="NewYears2024MiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_NewYears2024_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_NewYears2024_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_NewYears2024_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_NewYears2024_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="notificationLarge" title="CON_ShatteredDreamsMysteryBox_name" button="UI_OK" text="UI_ShatteredDreams_notif" icon="ICO_STOR_Single_ShatteredDreams_MysteryBox" />
		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Authority" limitedTime="true" limitedTimeEndDate="NewYears2024_ShatteredDreamsEnd" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Authority" fromInventory="false" />
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_NewYears2024_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="NewYears2024_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="NewYears2024_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="NewYears2024_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="NewYears2024_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="NewYears2024_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_NewYears2024_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="NewYears2024_OnePanel" />
		<Action type="runScript" script="NewYears2024_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="NewYears2024_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="NewYears2024_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="NewYears2024_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="AModernStoneAgeCatastrophe_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2024_Event" />
									<Attribute name="JobList" value="NewYears2024_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="AModernStoneAgeCatastrophe_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2024_Event" />
									<Attribute name="JobList" value="NewYears2024_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="AModernStoneAgeCatastrophe_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2024_Event" />
									<Attribute name="JobList" value="NewYears2024_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="AModernStoneAgeCatastrophe_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2024_Event" />
									<Attribute name="JobList" value="NewYears2024_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="AModernStoneAgeCatastrophe_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2024_Event" />
									<Attribute name="JobList" value="NewYears2024_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="NewYears2024_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="NewYears2024_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<AutoApply_CavemanHomerSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="NewYears2024_Scripts:AutoApply_CavemanHomerSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_CavemanHomerSkin_End>
	<AutoApply_CavemanHomerSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="CavemanHomer" fromInventory="true" />
	</AutoApply_CavemanHomerSkin_Delayed>
	<AutoApply_CavewomanMargeSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="NewYears2024_Scripts:AutoApply_CavewomanMargeSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_CavewomanMargeSkin_End>
	<AutoApply_CavewomanMargeSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="CavewomanMarge" fromInventory="true" />
	</AutoApply_CavewomanMargeSkin_Delayed>
	<AutoApply_TimeTravelerFrinkSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="NewYears2024_Scripts:AutoApply_TimeTravelerFrinkSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_TimeTravelerFrinkSkin_End>
	<AutoApply_TimeTravelerFrinkSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="TimeTravelerFrink" fromInventory="true" />
		<Action type="pantoobject" character="Frink" />
	</AutoApply_TimeTravelerFrinkSkin_Delayed>
	<RecommendStoreCategory_BetterLateThanForever ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="NewYears2024_BetterLateThanForever_OnePanel" />
		<Action type="recommendation" recType="Event" name="NewYears2024_BetterLateThanForever_OnePanel" eventName="UI_NewYears2024_Title" limitedTime="true" limitedTimeEndDate="NewYears2024_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_BetterLateThanForever>
	<EnterStoreCategory_BetterLateThanForever ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="BetterLateThanForever_Category" />
	</EnterStoreCategory_BetterLateThanForever>
	<NewYears2024_MTX_DisplayPromo ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="Currency" itemName="NewYears2024_TrayOfDonuts" />
	</NewYears2024_MTX_DisplayPromo>
	<GoToTimeMobileGOB>
		<Action type="focusOnMenuItem" menuCategory="BetterLateThanForever_Category" itemName="TimeMobileGOB" />
	</GoToTimeMobileGOB>
</ScriptPackage>