<ScriptPackage>
	<PrideWeek2015_Recommendation_Start>
		<Action type="recommendation" recType="Event" eventName="UI_PrideWeek2015_title" name="GoToPrideWeek2015" />
	</PrideWeek2015_Recommendation_Start>
	<PrideWeek2015_ClearRecommendation_Start parallel="true" ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirements>
				<Requirement type="time" start="Promo_PrideWeekTwentyFifteen_EndDate" />
			</Requirements>
			<True>
				<Action type="clearRecommendations" category="Event" />
			</True>
		</Action>
	</PrideWeek2015_ClearRecommendation_Start>
	<AjaxSteelMill_Tapped parallel="true">
		<Action type="sound" sound="sfx_PrideWeek_Club_Building_Tap.caf" />
	</AjaxSteelMill_Tapped>
	<RainbowFlag_Tapped parallel="true">
		<Action type="anim-play" building="RainbowFlag" animation="ActiveNoLoop" />
	</RainbowFlag_Tapped>
	<RainbowTree_Tapped parallel="true">
		<Action type="anim-play" building="RainbowTree" animation="ActiveNoLoop" />
	</RainbowTree_Tapped>
	<PrideBillboard_Tapped parallel="true">
		<Action type="anim-play" building="PrideBillboard" animation="ActiveNoLoop" />
	</PrideBillboard_Tapped>
	<PlacePrideDecorationsScript>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="focusOnMenuItem" itemName="RainbowTree" menuCategory="PrideWeek2015" />
			</True>
			<False>
				<Action type="userConfirmation" text="UI_TravelToSpringfieldForQuest" title="BLD_KrustylandShuttleToSpringfield_name" var="confirm_gotoSprinfield" />
				<Action type="checkExpression" expression="confirm_gotoSprinfield">
					<ExpressionCase value="1">
						<Action type="gotoland" land="Springfield" />
					</ExpressionCase>
				</Action>
			</False>
		</Action>
	</PlacePrideDecorationsScript>
</ScriptPackage>