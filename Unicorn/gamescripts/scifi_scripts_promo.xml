<ScriptPackage>
	<RockstarMaggiePromo_Start ignoreHUD="true">
		<Action type="createobject" name="PromoGilPermanent" save="true" showUnlock="false" panCamera="true" />
		<Action type="setVariable" boolVariable="PROMO_STARTED" boolValue="false" />
	</RockstarMaggiePromo_Start>
	<RockstarMaggiePromo_Recommend ignoreHUD="true">
		<Action type="recommendation" recType="Promoted" name="RockstarMaggiePromo" />
	</RockstarMaggiePromo_Recommend>
	<RockstarMaggiePromo_Display>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
			<True>
				<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_1_Gil" revealSpeed="medium" />
				<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="happy" />
				<Action type="dialogue" character="Homer" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_3_Homer" revealSpeed="medium" emotion="serious" />
				<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_4_Gil" revealSpeed="medium" emotion="selling" />
				<Action type="dialogue" character="Homer" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_5_Homer" revealSpeed="medium" emotion="sad" />
				<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_6_Gil" revealSpeed="medium" emotion="selling" />
				<Action type="dialogue" character="Homer" text="QST_RockStarMaggiePromo_PromoStart_3_dlg_Start_7_Homer" revealSpeed="medium" emotion="woohoo" />
				<Action type="recommendation" recType="Promoted" name="RockstarMaggiePromo" />
				<Action type="setVariable" boolVariable="RockstarMaggiePromo_Indicator_Active" boolValue="false" />
				<Action type="setVariable" boolVariable="PROMO_SHOW_IN_BUILD_MENU" boolValue="true" />
				<Action type="gotoState" state="GameState_InGame" />
				<Action type="displayPromo" event="RockstarMaggie_Promo" />
				<Action type="runScript" script="KillGil" package="MiscScripts" />
				<Action type="setVariable" boolVariable="RockstarMaggie_PromoSeen" boolValue="true" />
			</True>
		</Action>
	</RockstarMaggiePromo_Display>
	<RockstarMaggie_DisplayPromo ignoreHUD="true">
		<Action type="gotoState" state="GameState_InGame" />
		<Action type="displayPromo" event="RockstarMaggie_Promo" />
	</RockstarMaggie_DisplayPromo>
	<RockstarMaggiePromo_Purchase>
		<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoPurchased_3_dlg_Start_1_Gil" revealSpeed="medium" />
		<Action type="dialogue" character="Homer" text="QST_RockStarMaggiePromo_PromoPurchased_3_dlg_Start_2_Homer" revealSpeed="medium" />
		<Action type="clearRecommendations" category="Promoted" name="RockstarMaggiePromo" />
	</RockstarMaggiePromo_Purchase>
	<RockstarMaggiePromo_Cancel>
		<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoNotPurchased_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="dialogue" character="Gil" text="QST_RockStarMaggiePromo_PromoNotPurchased_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="setVariable" boolVariable="ShowPromoCancelDialogue" boolValue="false" />
		<Action type="deletecharacter" character="PromoGilPermanent" />
	</RockstarMaggiePromo_Cancel>
</ScriptPackage>