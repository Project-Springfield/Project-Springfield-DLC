		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Gaming" limitedTime="true" limitedTimeEndDate="ShiverMeBarnacles_ShatteredDreamsEnd" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Gaming" fromInventory="false" />
