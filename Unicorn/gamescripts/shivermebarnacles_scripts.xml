	<ExpiryWarning_72hr>
		<Action type="message" text="UI_ShiverMeBarnacles_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="ShiverMeBarnacles_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="ShiverMeBarnacles_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="ShiverMeBarnacles_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="ShiverMeBarnacles_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="ShiverMeBarnacles_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_ShiverMeBarnacles_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="ShiverMeBarnacles_OnePanel" />
		<Action type="runScript" script="ShiverMeBarnacles_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="ShiverMeBarnacles_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="ShiverMeBarnacles_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="ShiverMeBarnacles_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="ShiverMeBarnacles_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ShiverMeBarnacles_Event" />
									<Attribute name="JobList" value="ShiverMeBarnacles_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="ShiverMeBarnacles_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ShiverMeBarnacles_Event" />
									<Attribute name="JobList" value="ShiverMeBarnacles_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="ShiverMeBarnacles_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ShiverMeBarnacles_Event" />
									<Attribute name="JobList" value="ShiverMeBarnacles_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="ShiverMeBarnacles_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ShiverMeBarnacles_Event" />
									<Attribute name="JobList" value="ShiverMeBarnacles_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="ShiverMeBarnacles_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ShiverMeBarnacles_Event" />
									<Attribute name="JobList" value="ShiverMeBarnacles_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="ShiverMeBarnacles_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="ShiverMeBarnacles_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
