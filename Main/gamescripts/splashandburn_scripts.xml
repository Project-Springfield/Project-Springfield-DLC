				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_SplashAndBurn_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_SplashAndBurn_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="SplashAndBurn_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="SplashAndBurn_Store" value="true" />
		<Action type="recommendation" recType="Event" name="SplashAndBurn_SplashAndBurn_OnePanel" eventName="UI_SplashAndBurn_Title" limitedTime="true" limitedTimeEndDate="SplashAndBurn_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="SplashAndBurnMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_SplashAndBurn_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_SplashAndBurn_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_SplashAndBurn_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_SplashAndBurn_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="notificationLarge" title="CON_ShatteredDreamsMysteryBox_name" button="UI_OK" text="UI_ShatteredDreams_notif" icon="ICO_STOR_Single_ShatteredDreams_MysteryBox" />
		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Education" limitedTime="true" limitedTimeEndDate="SplashAndBurn_ShatteredDreams_End" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Education" fromInventory="false" />
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_SplashAndBurn_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="SplashAndBurn_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="SplashAndBurn_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="SplashAndBurn_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="SplashAndBurn_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="SplashAndBurn_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_SplashAndBurn_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="SplashAndBurn_OnePanel" />
		<Action type="runScript" script="SplashAndBurn_Scripts:OpenMasterQuest" waitUntilComplete="true" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Education" limitedTime="true" limitedTimeEndDate="SplashAndBurn_ShatteredDreams_End" />
		<Action type="reparseBuildMenu" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="SplashAndBurn_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="SplashAndBurn_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="SplashAndBurn_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="TheDevilAndTheDeepBlueSlide_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SplashAndBurn_Event" />
									<Attribute name="JobList" value="SplashAndBurn_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="TheDevilAndTheDeepBlueSlide_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SplashAndBurn_Event" />
									<Attribute name="JobList" value="SplashAndBurn_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheDevilAndTheDeepBlueSlide_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SplashAndBurn_Event" />
									<Attribute name="JobList" value="SplashAndBurn_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheDevilAndTheDeepBlueSlide_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SplashAndBurn_Event" />
									<Attribute name="JobList" value="SplashAndBurn_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheDevilAndTheDeepBlueSlide_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="SplashAndBurn_Event" />
									<Attribute name="JobList" value="SplashAndBurn_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="SplashAndBurn_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="SplashAndBurn_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<AutoApply_SwimsuitHomerSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="SplashAndBurn_Scripts:AutoApply_SwimsuitHomerSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_SwimsuitHomerSkin_End>
	<AutoApply_SwimsuitHomerSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="SwimsuitHomer" fromInventory="true" />
	</AutoApply_SwimsuitHomerSkin_Delayed>
	<AutoApply_SwimsuitBrockmanSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="SplashAndBurn_Scripts:AutoApply_SwimsuitBrockmanSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_SwimsuitBrockmanSkin_End>
	<AutoApply_SwimsuitBrockmanSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="SwimsuitBrockman" fromInventory="true" />
	</AutoApply_SwimsuitBrockmanSkin_Delayed>
	<RecommendStoreCategory_SplashAndBurn ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="SplashAndBurn_SplashAndBurn_OnePanel" />
		<Action type="recommendation" recType="Event" name="SplashAndBurn_SplashAndBurn_OnePanel" eventName="UI_SplashAndBurn_Title" limitedTime="true" limitedTimeEndDate="SplashAndBurn_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_SplashAndBurn>
	<EnterStoreCategory_SplashAndBurn ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="SplashAndBurn_Category" />
	</EnterStoreCategory_SplashAndBurn>
	<TwoFreeLandTokensNotif>
		<Action type="notification" title="CON_TwoFreeLandTokens_name" text="CON_TwoFreeLandTokens_desc" icon="ico_cur_freelandtoken_md" button="UI_OK" />
	</TwoFreeLandTokensNotif>
	<FreeLandTokenNotif>
