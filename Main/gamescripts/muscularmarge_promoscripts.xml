<ScriptPackage>
	<MuscularMarge_Start ignoreHUD="true">
		<Action type="createobject" name="PromoGilPermanent" save="true" showUnlock="false" panCamera="true" />
		<Action type="setVariable" boolVariable="PROMO_STARTED" boolValue="false" />
	</MuscularMarge_Start>
	<MuscularMarge_Recommend ignoreHUD="true">
		<Action type="recommendation" recType="Promoted" name="ShapesGym" />
	</MuscularMarge_Recommend>
	<MuscularMarge_Display>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
			<True>
				<Action type="dialogue" character="Gil" text="QST_GilPromo_MuscularMarge_Start_1_Gil" revealSpeed="medium" emotion="selling" />
				<Action type="dialogue" character="Marge" text="QST_GilPromo_MuscularMarge_Start_2_Marge" revealSpeed="medium" />
				<Action type="dialogue" character="Gil" text="QST_GilPromo_MuscularMarge_Start_3_Gil" revealSpeed="medium" emotion="selling" />
				<Action type="dialogue" character="Marge" text="QST_GilPromo_MuscularMarge_Start_4_Marge" revealSpeed="medium" emotion="happy" />
				<Action type="recommendation" recType="Promoted" name="ShapesGym" />
				<Action type="setVariable" boolVariable="MuscularMarge_INDICATOR_ACTIVE" boolValue="false" />
				<Action type="setVariable" boolVariable="PROMO_SHOW_IN_BUILD_MENU" boolValue="true" />
				<Action type="displayPromo" character="PromoGilPermanent" />
				<Action type="setVariable" boolVariable="ClickedGil" boolValue="true" />
				<Action type="deletecharacter" character="PromoGilPermanent" />
			</True>
		</Action>
	</MuscularMarge_Display>
	<MuscularMarge_DisplayPromo ignoreHUD="true">
		<Action type="gotoState" state="GameState_InGame" />
		<Action type="displayPromo" character="PromoGilPermanent" />
	</MuscularMarge_DisplayPromo>
	<MuscularMarge_Purchase>
		<Action type="dialogue" character="Gil" text="QST_GilPromo_MuscularMarge_Purchase_1_Gil" revealSpeed="medium" emotion="happy" />
		<Action type="notification" title="QST_MuscularMarge_Start_NotificationTitle" button="UI_OK" text="QST_MuscularMarge_Start_NotificationText" icon="Marge_Muscular_Menu" />
	</MuscularMarge_Purchase>
	<MuscularMarge_Cancel>
		<Action type="dialogue" character="Gil" text="QST_GilPromo_MuscularMarge_Cancel_1_Gil" revealSpeed="medium" emotion="surprised" />
		<Action type="setVariable" boolVariable="ShowPromoCancelDialogue" boolValue="false" />
		<Action type="deletecharacter" character="PromoGilPermanent" />
	</MuscularMarge_Cancel>
	<KillGil_MuscularMarge ignoreHUD="true" parallel="true">
		<Action type="deletecharacter" character="PromoGilPermanent" />
	</KillGil_MuscularMarge>
	<MuscularMarge_StoreEnd ignoreHUD="true">
		<Action type="clearRecommendations" category="Promoted" />
	</MuscularMarge_StoreEnd>
</ScriptPackage>