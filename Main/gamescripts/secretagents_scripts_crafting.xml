<ScriptPackage>
	<UpdateCrafting>
		<Action type="program">
			<Program><![CDATA[#program;
					while (User::getVariable('SecretAgents_CraftingLevel') < User::getVariable('SecretAgents_MaxCraftingLevel') && SecretAgents_CraftingXP >= toDouble(System::getConfigValue('__SecretAgents_GameConfig:Crafting_Targets:CurrentLevel_Target__')))
					{
						User::setVariable('SecretAgents_CraftingLevel', User::getVariable('SecretAgents_CraftingLevel') + 1, true);
					}
					
					var previousTarget = toDouble(System::getConfigValue('__SecretAgents_GameConfig:Crafting_Targets:PreviousLevel_Target__'));
					User::setVariable('SecretAgents_MaxCraftProgress', toDouble(System::getConfigValue('__SecretAgents_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - previousTarget, true);
					User::setVariable('SecretAgents_CraftProgress', System::evaluate('Spendable::SecretAgents_CraftingXP') - previousTarget, true);
				]]></Program>
		</Action>
	</UpdateCrafting>
	<IncreaseStoreLevel>
		<Action type="if">
			<If expression="SecretAgents_CraftingLevel &lt; SecretAgents_MaxCraftingLevel">
				<Then>
					<Action type="reward" SecretAgents_CraftingXP="toDouble(System::getConfigValue('__SecretAgents_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - SecretAgents_CraftingXP" />
				</Then>
			</If>
		</Action>
		<Action type="returnToInGameState" />
	</IncreaseStoreLevel>
	<Crafting_Level02>
		<Action type="notification" title="UI_AtW_Crafting_LevelUp02" button="UI_OK" text="UI_SecretAgents_Crafting_LevelUp_NonUnique" icon="ICO_CUR_SecretAgents_Schematic_LG" />
		<Action type="if">
			<If expression="lessThan(SecretAgents_CraftingXP, toDouble(System::getConfigValue('__SecretAgents_Spreadsheet_Config:CraftLevels:Level03_Target__')))">
				<Then>
					<Action type="actionSequence" script="SecretAgents_Scripts:Tab_Crafting_ScrollTo">
						<FormatToken key="ItemToScrollTo" value="BLD_CheckpointParkBench_NAME" />
