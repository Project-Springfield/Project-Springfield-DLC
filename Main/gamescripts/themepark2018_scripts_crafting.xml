<ScriptPackage>
	<UpdateCrafting>
		<Action type="program">
			<Program><![CDATA[#program;
                    while (User::getVariable('ThemePark2018_CraftingLevel') < User::getVariable('ThemePark2018_MaxCraftingLevel') && ThemePark2018_CraftingXP >= toDouble(System::getConfigValue('__ThemePark2018_GameConfig:Crafting_Targets:CurrentLevel_Target__')))
                    {
                    User::setVariable('ThemePark2018_CraftingLevel', User::getVariable('ThemePark2018_CraftingLevel') + 1, true);
                    }

                    var previousTarget = toDouble(System::getConfigValue('__ThemePark2018_GameConfig:Crafting_Targets:PreviousLevel_Target__'));
                    User::setVariable('ThemePark2018_MaxCraftProgress', toDouble(System::getConfigValue('__ThemePark2018_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - previousTarget, true);
                    User::setVariable('ThemePark2018_CraftProgress', System::evaluate('Spendable::ThemePark2018_CraftingXP') - previousTarget, true);
                ]]></Program>
		</Action>
	</UpdateCrafting>
	<IncreaseStoreLevel>
		<Action type="if">
			<If expression="ThemePark2018_CraftingLevel &lt; ThemePark2018_MaxCraftingLevel">
				<Then>
					<Action type="reward" ThemePark2018_CraftingXP="toDouble(System::getConfigValue('__ThemePark2018_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - ThemePark2018_CraftingXP" />
				</Then>
			</If>
		</Action>
		<Action type="returnToInGameState" />
	</IncreaseStoreLevel>
	<Crafting_Level02>
		<Action type="notification" title="UI_AtW_Crafting_LevelUp02" button="UI_OK" text="UI_ThemePark2018_Crafting_LevelUp" icon="ICO_CUR_ThemePark2018_CraftingCurrency_LG" />
		<Action type="if">
			<If expression="lessThan(ThemePark2018_CraftingXP, toDouble(System::getConfigValue('__ThemePark2018_BalanceConfig:CraftLevels:Level03_Target__')))">
				<Then>
					<Action type="actionSequence" script="ThemePark2018_Scripts:Tab_Crafting_ScrollTo">
						<FormatToken key="ItemToScrollTo" value="BLD_Injury500LongTrack_name" />
