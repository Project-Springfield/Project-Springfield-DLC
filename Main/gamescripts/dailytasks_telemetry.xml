<TelemetryFamilies>
	<DailyTasks>
		<SessionCounters>
			<Counter name="TimesDCSMenuOpened" />
		</SessionCounters>
		<TriggerEffects>
			<TriggerEffect>
				<Filter type="matching" key="TriggerType" string="OnDailyChallengeSystemMenuOpened" />
				<Response type="incrementCounter" counter="TimesDCSMenuOpened" increment="1" />
				<Response type="logEvent">
					<Event id="3517">
						<Parameter0 type="Enumeration" source="FixedString" extra="{Trigger::DailyChallengeSelectedName}" />
						<Parameter1 type="Enumeration" source="FormulaAsInt" extra="{Trigger::NumberAvailableDailyChallenges}" />
						<Parameter2 type="Enumeration" source="StrictlyPositiveCounter" extra="TimesDCSMenuOpened" />
					</Event>
				</Response>
			</TriggerEffect>
			<TriggerEffect>
				<Filter type="matching" key="TriggerType" string="OnDailyChallengeSystemTaskRewardClaimed" />
				<Response type="logEvent">
					<Event id="3516">
						<Parameter0 type="Enumeration" source="FormulaAsInt" extra="{Trigger::DailyChallengeID}" />
						<Parameter1 type="Enumeration" source="FixedString" extra="Success" />
					</Event>
				</Response>
			</TriggerEffect>
			<TriggerEffect>
				<Filter type="matching" key="TriggerType" string="OnDailyChallengeSystemTaskRewardCancelled" />
				<Response type="logEvent">
					<Event id="3516">
						<Parameter0 type="Enumeration" source="FormulaAsInt" extra="{Trigger::DailyChallengeID}" />
						<Parameter1 type="Enumeration" source="FixedString" extra="Dismiss" />
					</Event>
				</Response>
			</TriggerEffect>
			<TriggerEffect>
				<Filter type="matching" key="TriggerType" string="OnDailyChallengeSystemTaskRewardExpired" />
				<Response type="logEvent">
					<Event id="3516">
						<Parameter0 type="Enumeration" source="FormulaAsInt" extra="{Trigger::DailyChallengeID}" />
						<Parameter1 type="Enumeration" source="FixedString" extra="Failure" />
					</Event>
				</Response>
			</TriggerEffect>
			<TriggerEffect>
				<Filter type="matching" key="TriggerType" string="OnDailyChallengeSystemTaskRewardClaimed2" />
				<Response type="logEvent">
					<Event id="4069">
						<Parameter0 type="Enumeration" source="FixedString" extra="{Trigger::DCSTaskDescription}" />
						<Parameter1 type="Enumeration" source="FixedString" extra="{Trigger::DCSRewardsString}" />
						<Parameter2 type="Enumeration" source="FixedString" extra="{Trigger::DCSSuccessDismiss}" />
					</Event>
				</Response>
			</TriggerEffect>
			<TriggerEffect>
				<Filter type="matching" key="TriggerType" string="OnDailyChallengeSystemMetaRewardClaimed" />
				<Response type="logEvent">
					<Event id="4070">
						<Parameter0 type="Enumeration" source="FormulaAsInt" extra="{Trigger::Amount}" />
						<Parameter1 type="Enumeration" source="FixedString" extra="{Trigger::DCSRewardsString}" />
						<Parameter2 type="UserLevel" source="UserLevel" />
					</Event>
				</Response>
			</TriggerEffect>
		</TriggerEffects>
	</DailyTasks>
</TelemetryFamilies>