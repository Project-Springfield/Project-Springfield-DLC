<SpecialEvents>
	<SpecialEvent id="143000" name="DailyChallengeEvent">
		<Variable name="DailyChallenges" value="true" />
		<OnEvent event="DailyTaskCollected" user="local" ignoreTypeCheck="true">
			<Script name="DailyTasks_HelperScripts:PlayClaimSound" />
		</OnEvent>
		<OnEvent event="TaskCanceled" user="local" ignoreTypeCheck="true">
			<Script name="DailyTasks_HelperScripts:PlayDismissSound" />
		</OnEvent>
		<OnEvent event="TaskCompleted" user="local" ignoreTypeCheck="true">
			<Script name="DailyTasks_HelperScripts:PlayCompletedSound" />
		</OnEvent>
		<Buildings override="true">
			<Building name="BigBox">
				<OnEvent event="BuildingTouched" onObject="BigBox" user="local">
					<Script name="DailyTasks_HelperScripts:OpenDailyChallengeSystemUI" />
				</OnEvent>
			</Building>
		</Buildings>
	</SpecialEvent>
</SpecialEvents>