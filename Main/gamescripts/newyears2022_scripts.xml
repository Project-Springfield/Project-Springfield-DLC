<ScriptPackage>
	<ShowEventIntro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="NewYears2022MiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="NewYears2022_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="NewYears2022_IntroSeen" not="true" />
					<Attribute name="text" value="UI_MiniEvents_PlayButton" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Requirement type="variable" variable="NewYears2022_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Requirement type="variable" variable="NewYears2022_IntroSeen" />
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_NewYears2022_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="timeLeft">
					<Attribute name="text" value="UI_NewYears2022_IntroPanelFooter" localise="true" />
					<Attribute name="color" value="FFFFFFFF" />
				</AttributeSet>
				<AttributeSet name="textColumn1">
					<Attribute name="text" value="UI_NewYears2022_IntroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn2">
					<Attribute name="text" value="UI_NewYears2022_IntroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_NewYears2022_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="NewYears2022_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="NewYears2022_Store" value="true" />
		<Action type="recommendation" recType="Event" name="NewYears2022_RedAlert_OnePanel" eventName="UI_NewYears2022_Title" limitedTime="true" limitedTimeEndDate="NewYears2022_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="NewYears2022MiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_NewYears2022_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_NewYears2022_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_NewYears2022_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_NewYears2022_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_NewYears2022_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="NewYears2022_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="NewYears2022_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="NewYears2022_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="NewYears2022_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="NewYears2022_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_NewYears2022_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="NewYears2022_OnePanel" />
		<Action type="runScript" script="NewYears2022_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="NewYears2022_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="NewYears2022_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="NewYears2022_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="PanicAtTheSilo_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2022_Event" />
									<Attribute name="JobList" value="NewYears2022_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="PanicAtTheSilo_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2022_Event" />
									<Attribute name="JobList" value="NewYears2022_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PanicAtTheSilo_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2022_Event" />
									<Attribute name="JobList" value="NewYears2022_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PanicAtTheSilo_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2022_Event" />
									<Attribute name="JobList" value="NewYears2022_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="PanicAtTheSilo_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="NewYears2022_Event" />
									<Attribute name="JobList" value="NewYears2022_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="NewYears2022_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="NewYears2022_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<AutoApply_RadioactiveHomerSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="NewYears2022_Scripts:AutoApply_RadioactiveHomerSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_RadioactiveHomerSkin_End>
	<AutoApply_RadioactiveHomerSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="RadioactiveHomer" fromInventory="true" />
	</AutoApply_RadioactiveHomerSkin_Delayed>
	<RecommendStoreCategory_RedAlert ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="NewYears2022_RedAlert_OnePanel" />
		<Action type="recommendation" recType="Event" name="NewYears2022_RedAlert_OnePanel" eventName="UI_NewYears2022_Title" limitedTime="true" limitedTimeEndDate="NewYears2022_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_RedAlert>
	<EnterStoreCategory_RedAlert ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="RedAlert_Category" />
	</EnterStoreCategory_RedAlert>
	<InventoryAlert>
		<Action type="message" text="UI_ItemsInInventory" button="UI_OK" revealSpeed="medium" />
	</InventoryAlert>
	<GoToInventory_WallBundle>
		<Action type="focusOnMenuItem" itemName="BiohazardWall" inventory="true" />
	</GoToInventory_WallBundle>
	<Give_DeepSpaceHomer>
		<Action type="reward">
			<Item type="consumable" name="Homer_DeepSpace_Con" useImmediately="true" />
		</Action>
	</Give_DeepSpaceHomer>
	<Swapout_RocketLaunchPlatforms>
		<Action type="replaceobject" from="RocketLaunchPlatform" to="RocketLaunchPlatform_Built" ignoreObject="false" />
		<Action type="replaceobject" from="RocketLaunchPlatform_Built" to="RocketLaunchPlatform_Farm" ignoreObject="false" />
	</Swapout_RocketLaunchPlatforms>
</ScriptPackage>