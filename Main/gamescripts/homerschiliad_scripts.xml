	<OnLandLoad ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirements>
							<Requirement type="quest started" quest="ItsNotTheHeatItsTheHumidity_1" />
							<Requirement type="variable" variable="HomersChiliad_PreExpiryDisplayed72" not="true" />
							<Requirement type="time" start="_[System::evaluate('Date::HomersChiliad_End')-fromHours(72)]_" end="_[System::evaluate('Date::HomersChiliad_End')-fromHours(24)]_" />
							<Requirement type="variable" variable="HomersChiliad_Complete" not="true" />
						</Requirements>
						<Then>
							<Action type="message" text="UI_HomersChiliad_Expiration72" />
							<Action type="setVariable" boolVariable="HomersChiliad_PreExpiryDisplayed72" boolValue="true" />
							<Action type="runScript" script="OpenMasterQuest" package="HomersChiliad_Scripts" waitUntilComplete="true" />
						</Then>
					</If>
					<ElseIf>
						<Requirements>
							<Requirement type="quest started" quest="ItsNotTheHeatItsTheHumidity_1" />
							<Requirement type="variable" variable="HomersChiliad_PreExpiryDisplayed24" not="true" />
							<Requirement type="time" start="_[System::evaluate('Date::HomersChiliad_End')-fromHours(24)]_" end="HomersChiliad_End" />
							<Requirement type="variable" variable="Valentines2016_Complete" not="true" />
						</Requirements>
						<Then>
							<Action type="message" text="UI_HomersChiliad_Expiration24" />
							<Action type="setVariable" boolVariable="HomersChiliad_PreExpiryDisplayed24" boolValue="true" />
							<Action type="runScript" script="OpenMasterQuest" package="HomersChiliad_Scripts" waitUntilComplete="true" />
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirements>
							<Requirement type="quest started" quest="ItsNotTheHeatItsTheHumidity_1" />
							<Requirement type="variable" variable="HomersChiliad_ExpiryDisplayed" not="true" />
							<Requirement type="time" start="HomersChiliad_End" />
							<Requirement type="variable" variable="HomersChiliad_Complete" not="true" />
						</Requirements>
						<Then>
							<Action type="checkRequirements">
								<Requirement type="active quest" quest="ItsNotTheHeatItsTheHumidity_6" />
								<False>
									<Action type="message" text="UI_HomersChiliad_Expired" />
								</False>
							</Action>
							<Action type="clearRecommendations" category="Event" />
							<Action type="setVariable" boolVariable="HomersChiliad_ExpiryDisplayed" boolValue="true" />
							<Action type="setVariable" boolVariable="HomersChiliad_EventExpired" boolValue="true" />
							<Action type="runScript" script="OpenMasterQuest" package="HomersChiliad_Scripts" waitUntilComplete="true" />
						</Then>
					</ElseIf>
				</Action>
			</True>
		</Action>
	</OnLandLoad>
