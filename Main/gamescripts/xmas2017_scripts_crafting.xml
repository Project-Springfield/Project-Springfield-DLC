		<Action type="if">
			<If expression="lessThan(XMAS2017_CraftingXP, toDouble(System::getConfigValue('__XMAS2017_BalancingConfig:CraftLevels:Level03_Target__')))">
				<Then>
					<Action type="actionSequence" script="XMAS2017_Scripts:Tab_Crafting_ScrollTo">
						<FormatToken key="ItemToScrollTo" value="BLD_ElfDayCareDoor_name" />
