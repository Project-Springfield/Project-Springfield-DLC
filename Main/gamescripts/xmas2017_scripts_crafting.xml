<ScriptPackage>
	<UpdateCrafting>
		<Action type="program">
			<Program><![CDATA[#program;
                    while (User::getVariable('XMAS2017_CraftingLevel') < User::getVariable('XMAS2017_MaxCraftingLevel') && XMAS2017_CraftingXP >= toDouble(System::getConfigValue('__XMAS2017_GameConfig:Crafting_Targets:CurrentLevel_Target__')))
                    {
                        User::setVariable('XMAS2017_CraftingLevel', User::getVariable('XMAS2017_CraftingLevel') + 1, true);
                    }

                    var previousTarget = toDouble(System::getConfigValue('__XMAS2017_GameConfig:Crafting_Targets:PreviousLevel_Target__'));
                    User::setVariable('XMAS2017_MaxCraftProgress', toDouble(System::getConfigValue('__XMAS2017_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - previousTarget, true);
                    User::setVariable('XMAS2017_CraftProgress', System::evaluate('Spendable::XMAS2017_CraftingXP') - previousTarget, true);
                ]]></Program>
		</Action>
	</UpdateCrafting>
	<IncreaseStoreLevel>
		<Action type="if">
			<If expression="XMAS2017_CraftingLevel &lt; XMAS2017_MaxCraftingLevel">
				<Then>
					<Action type="reward" XMAS2017_CraftingXP="toDouble(System::getConfigValue('__XMAS2017_GameConfig:Crafting_Targets:CurrentLevel_Target__')) - XMAS2017_CraftingXP" />
				</Then>
			</If>
		</Action>
		<Action type="returnToInGameState" />
	</IncreaseStoreLevel>
	<Crafting_Level02>
