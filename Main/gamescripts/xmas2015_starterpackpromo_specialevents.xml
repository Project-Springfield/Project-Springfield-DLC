<SpecialEvents>
	<MasterList>
		<DataID id="144000" name="XMAS2015_StarterPackPromo_Promo" status="deprecated" onDeprecated="delete" startDate="XMASFifteen_StarterPack_Start" endDate="XMASFifteen_StarterPack_End" />
		<DataID id="144001" name="XMAS2015_SnowGlobe" status="deprecated" onDeprecated="delete" startDate="XMASFifteen_SnowGlobePromo_Start" endDate="XMASFifteen_SnowGlobePromo_End" />
	</MasterList>
	<SpecialEvent id="144000" name="XMAS2015_StarterPackPromo_Promo" character="Homer">
		<Variable name="XMAS2015_StarterPackPromo_Promo" value="true" />
		<ActivePurchaseItem name="NewUserStarterPack" />
		<SpecialButtons>
			<Button mode="game" icon="ICO_MHUD_StarterPack">
				<Requirements>
					<Requirement type="formula" formula="XMAS2015_StarterPackPurchased==0" />
					<Requirement type="quest started" quest="StarterPack_Promo_Buy" />
				</Requirements>
				<RunScript>
					<Script name="DisplayPromo" package="XMAS2015_StarterPackPromo_Scripts" />
				</RunScript>
			</Button>
		</SpecialButtons>
		<Promo eventName="XMAS2015_StarterPackPromo_Promo" questID="144001" type="mtxpurchase" object="XMAS2015_StarterPack" file="Promo_StarterPack" yes="UI_Promo_GetEmNow" hideDonut="true" showMTXPrice="true" buttonColour="0091F6FF" visualEndDate="XMASFifteen_StarterPack_End" />
	</SpecialEvent>
	<SpecialEvent id="144001" name="XMAS2015_SnowGlobe">
		<Characters override="true">
			<Character name="PromoGilPermanent">
				<OnEvent event="CharacterTouched" user="local">
					<Requirement type="variable" variable="XMAS2015_SnowGlobe_INDICATOR_ACTIVE" />
					<Script name="XMAS2015_SnowGlobe_Display" package="XMAS2015_StarterPackPromo_Scripts" />
				</OnEvent>
			</Character>
		</Characters>
		<OnEvent event="LandVisited" user="local" ignoreTypeCheck="true">
			<Requirements>
				<Requirement type="variable" variable="XMAS2015_SnowGlobe_INDICATOR_ACTIVE" not="true" />
				<Requirement type="time" start="XMASFifteen_SnowGlobePromo_Start" end="XMASFifteen_SnowGlobePromo_End" />
				<Requirement type="variable" variable="XMAS2015SNOWGLOBE_SEENONCE" />
				<Requirement type="quest" quest="MyPad" />
			</Requirements>
			<Script name="XMAS2015_SNOWGLOBE_Recommend" package="XMAS2015_StarterPackPromo_Scripts" />
		</OnEvent>
		<Variable name="XMAS2015_SnowGlobe_INDICATOR_ACTIVE" value="true" />
		<Variable name="PROMO_STARTED" value="true" />
		<Variable name="PROMO_SHOW_IN_BUILD_MENU" value="false" />
		<Variable name="PROMO_XMAS2015SNOWGLOBE_ACTIVE" value="true" />
		<Variable name="XMAS2015SNOWGLOBE_SEENONCE" value="false" />
		<Variable name="XMAS2015SNOWGLOBE_GILPURCHASEDDIALOGUE" value="false" />
		<Variable name="Promo_XMAS2015_SnowGlobe_Active" value="true" />
		<Promo eventName="XMAS2015_SnowGlobe" questID="144004" type="building" object="GiantSnowGlobe" file="Promo_SnowGlobe2015" yes="BTN_225Donuts" hideDonut="true" visualEndDate="XMASFifteen_SnowGlobePromo_End" />
	</SpecialEvent>
</SpecialEvents>