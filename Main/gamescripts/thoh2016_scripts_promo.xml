		<Action type="dialogue" character="Gil" text="QST_BlinkyMonsterPromo_PromoPurchased_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="clearRecommendations" category="Promoted" name="BlinkyMonster_Promo" />
