	<BlinkyMonsterPromo_Display>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
			<True>
				<Action type="dialogue" character="Gil" text="QST_BlinkyMonsterPromo_PromoStart_3_dlg_Start_1_Gil" revealSpeed="medium" />
				<Action type="dialogue" character="Gil" text="QST_BlinkyMonsterPromo_PromoStart_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="sad" />
