		<Action type="dialogue" character="Gil" text="QST_BlinkyMonsterPromo_PromoNotPurchased_3_dlg_Start_2_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="setVariable" boolVariable="ShowPromoCancelDialogue" boolValue="false" />
		<Action type="deletecharacter" character="PromoGilPermanent" />
