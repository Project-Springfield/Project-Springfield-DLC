	</JayGPromo_Start>
	<JayGPromo_Display>
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
			<True>
				<Action type="dialogue" character="Gil" text="QST_GilPromo_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="happy" />
				<Action type="dialogue" character="Gil" text="QST_GilPromo_3_dlg_Start_2_Gil" revealSpeed="medium" />
				<Action type="dialogue" character="Gil" text="QST_GilPromo_3_dlg_Start_3_Gil" revealSpeed="medium" />
				<Action type="dialogue" character="Gil" text="QST_GilPromo_3_dlg_Start_4_Gil" revealSpeed="medium" emotion="selling" />
				<Action type="recommendation" recType="Promoted" name="JayGPromo" />
				<Action type="setVariable" boolVariable="JayG_PromoIndicatorActive" boolValue="false" />
				<Action type="setVariable" boolVariable="JayG_PromoShowInBuildMenu" boolValue="true" />
				<Action type="gotoState" state="GameState_InGame" />
				<Action type="displayPromo" event="JayGPromo" />
				<Action type="runScript" script="KillGil" package="MiscScripts" />
				<Action type="setVariable" boolVariable="JayG_PromoSeen" boolValue="true" />
			</True>
		</Action>
	</JayGPromo_Display>
	<JayG_DisplayPromo ignoreHUD="true">
		<Action type="gotoState" state="GameState_InGame" />
		<Action type="displayPromo" event="JayGPromo" />
	</JayG_DisplayPromo>
	<JayGPromo_Purchase>
		<Action type="rewardWithPlaceStore" attributes="SpringfieldGames_MenuConfig:RewardWithPlaceStore">
			<Item type="building" name="JayGsPool" />
