		<Action type="dialogue" character="Gil" text="QST_GilPromoAccept_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="happy" />
		<Action type="dialogue" character="JayG" text="QST_GilPromoAccept_3_dlg_Start_2_JayG" revealSpeed="medium" />
		<Action type="dialogue" character="Gil" text="QST_GilPromoAccept_3_dlg_Start_3_Gil" revealSpeed="medium" emotion="surprised" />
		<Action type="dialogue" character="JayG" text="QST_GilPromoAccept_3_dlg_Start_4_JayG" revealSpeed="medium" emotion="annoyed" />
		<Action type="dialogue" character="Gil" text="QST_GilPromoAccept_3_dlg_Start_5_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="clearRecommendations" category="Promoted" name="JayGPromo" />
		<Action type="setVariable" boolVariable="JayG_PromoShowInBuildMenu" boolValue="false" />
	</JayGPromo_Purchase>
	<JayGPromo_Cancel>
		<Action type="dialogue" character="Gil" text="QST_GilPromoDecline_3_dlg_Start_1_Gil" revealSpeed="medium" emotion="sad" />
		<Action type="deletecharacter" character="PromoGilPermanent" />
	</JayGPromo_Cancel>
</ScriptPackage>