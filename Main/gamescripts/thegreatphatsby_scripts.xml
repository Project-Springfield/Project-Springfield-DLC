<ScriptPackage>
	<JayGsPool_Tapped parallel="true">
		<Action type="anim-play" animation="ActiveNoLoop" />
	</JayGsPool_Tapped>
	<Goosius_Tapped parallel="true">
		<Action type="anim-play" animation="Tap" appendLeftRight="true" />
	</Goosius_Tapped>
	<BurnsSummerMansionUpgrade>
		<Action type="if">
			<If>
				<Requirement type="formula" formula="lessThan(System::evaluate('Building::BurnsSummerMansion::Object::BuildingLevel'), 4)" />
				<Then>
					<Action type="setObjectVariable" onType="building" onObject="BurnsSummerMansion" variable="BuildingLevel" value="14" />
					<Action type="SilentlyUnlockSkin" skin="BurnsSummerMansion_WestWing" />
					<Action type="SilentlyUnlockSkin" skin="BurnsSummerMansion_EastWing" />
					<Action type="setBuildingSkin" skinName="BurnsSummerMansion_EastWing" />
				</Then>
			</If>
			<ElseIf>
				<Requirement type="formula" formula="lessThan(System::evaluate('Building::BurnsSummerMansion::Object::BuildingLevel'), 14)" />
				<Then>
					<Action type="setObjectVariable" onType="building" onObject="BurnsSummerMansion" variable="BuildingLevel" value="14" />
					<Action type="SilentlyUnlockSkin" skin="BurnsSummerMansion_EastWing" />
					<Action type="setBuildingSkin" skinName="BurnsSummerMansion_EastWing" />
				</Then>
			</ElseIf>
		</Action>
	</BurnsSummerMansionUpgrade>
</ScriptPackage>