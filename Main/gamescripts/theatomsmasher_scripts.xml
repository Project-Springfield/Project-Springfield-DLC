		<Action type="recommendation" recType="Event" name="TheAtomSmasher_TheAtomSmasher_OnePanel" eventName="UI_TheAtomSmasher_Title" limitedTime="true" limitedTimeEndDate="TheAtomSmasher_End" />
		<Action type="reparseBuildMenu" />
