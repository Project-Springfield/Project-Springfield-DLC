				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_ForAllRichMankind_MiniEventPanel_Intro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="setVariable" boolVariable="ForAllRichMankind_IntroSeen" boolValue="true" />
		<Action type="updateVariable" variable="ForAllRichMankind_Store" value="true" />
		<Action type="recommendation" recType="Event" name="ForAllRichMankind_ForAllRichMankind_OnePanel" eventName="UI_ForAllRichMankind_Title" limitedTime="true" limitedTimeEndDate="ForAllRichMankind_End" />
		<Action type="reparseBuildMenu" />
	</ShowEventIntro>
	<ShowEventOutro>
		<Action type="miniEventPanel">
			<Attribute name="config">
				<AttributeSet name="source">
					<Attribute name="file" value="ForAllRichMankindMiniEventPopUp" />
				</AttributeSet>
				<AttributeSet name="playButtonText">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="playButtonTextHL">
					<Attribute name="text" value="UI_OK" localise="true" />
				</AttributeSet>
				<AttributeSet name="titleText">
					<Attribute name="text" value="UI_ForAllRichMankind_Title" localise="true" />
					<Attribute name="color" value="ffcb1bff" />
				</AttributeSet>
				<AttributeSet name="textColumn4">
					<Attribute name="text" value="UI_ForAllRichMankind_OutroPanelText_1" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="textColumn5">
					<Attribute name="text" value="UI_ForAllRichMankind_OutroPanelText_2" localise="true" />
					<Attribute name="color" value="000000FF" />
				</AttributeSet>
				<AttributeSet name="panel">
					<Attribute name="image" value="BSE_ForAllRichMankind_MiniEventPanel_Outro" />
				</AttributeSet>
				<AttributeSet name="playButton">
					<Attribute name="color" value="0091F1FF" />
				</AttributeSet>
			</Attribute>
		</Action>
		<Action type="notificationLarge" title="CON_ShatteredDreamsMysteryBox_name" button="UI_OK" text="UI_ShatteredDreams_notif" icon="ICO_STOR_Single_ShatteredDreams_MysteryBox" />
		<Action type="reward" save="true" ShatteredToken="1" />
		<Action type="recommendation" recType="Promoted" name="ShatteredDreamsMysteryBox_Entertainment" limitedTime="true" limitedTimeEndDate="ForAllRichMankind_ShatteredDreams_End" />
		<Action type="reparseBuildMenu" />
		<Action type="consumable" consumable="ShatteredDreamsMysteryBox_Entertainment" fromInventory="false" />
	</ShowEventOutro>
	<ExpiryWarning_72hr>
		<Action type="message" text="UI_ForAllRichMankind_72HourExpiry_text" />
		<Action type="setVariable" boolVariable="ForAllRichMankind_PreExpiryDisplayed72" boolValue="true" />
		<Action type="runScript" script="ForAllRichMankind_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_72hr>
	<ExpiryWarning_24hr>
		<Action type="message" text="{FormattedExpiration24}" formatMe="root">
			<FormattingConfig path="ForAllRichMankind_GameConfig:ExpirationFormattedText" />
		</Action>
		<Action type="setVariable" boolVariable="ForAllRichMankind_PreExpiryDisplayed24" boolValue="true" />
		<Action type="runScript" script="ForAllRichMankind_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</ExpiryWarning_24hr>
	<DisplayExpiry>
		<Action type="message" text="UI_ForAllRichMankind_Expired_text" />
		<Action type="clearRecommendations" category="Event" name="ForAllRichMankind_OnePanel" />
		<Action type="runScript" script="ForAllRichMankind_Scripts:OpenMasterQuest" waitUntilComplete="true" />
	</DisplayExpiry>
	<EventCompleted>
		<Action type="setVariable" boolVariable="ForAllRichMankind_Complete" boolValue="true" />
	</EventCompleted>
	<OpenMasterQuest>
		<Action type="checkRequirements">
			<Requirement type="gamestate" state="GameState_QuestProgress" />
			<True>
				<Action type="changeQuestForProgressState" name="ForAllRichMankind_MasterQuest" />
			</True>
			<False>
				<Action type="gotoState" state="GameState_QuestProgress" forceState="true">
					<Extras>
						<Attribute name="questParentDelegate" value="ForAllRichMankind_MasterQuest" />
					</Extras>
				</Action>
			</False>
		</Action>
	</OpenMasterQuest>
	<ShowJobList ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="land" land="Springfield" />
			<True>
				<Action type="if">
					<If>
						<Requirement type="active quest" quest="TheWasteRace_1" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ForAllRichMankind_Event" />
									<Attribute name="JobList" value="ForAllRichMankind_JL_1" />
								</Extras>
							</Action>
						</Then>
					</If>
					<ElseIf>
						<Requirement type="active quest" quest="TheWasteRace_2" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ForAllRichMankind_Event" />
									<Attribute name="JobList" value="ForAllRichMankind_JL_2" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheWasteRace_3" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ForAllRichMankind_Event" />
									<Attribute name="JobList" value="ForAllRichMankind_JL_3" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheWasteRace_4" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ForAllRichMankind_Event" />
									<Attribute name="JobList" value="ForAllRichMankind_JL_4" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
					<ElseIf>
						<Requirement type="active quest" quest="TheWasteRace_5" />
						<Then>
							<Action type="gotoState" state="GameState_SpecialEventJobList">
								<Extras>
									<Attribute name="SpecialEvent" value="ForAllRichMankind_Event" />
									<Attribute name="JobList" value="ForAllRichMankind_JL_5" />
								</Extras>
							</Action>
						</Then>
					</ElseIf>
				</Action>
			</True>
			<False>
				<Action type="pantoobject" building="KrustylandShuttleToSpringfield" fakeTouch="true" />
			</False>
		</Action>
	</ShowJobList>
	<CheckIfEnd ignoreHUD="true">
		<Action type="checkRequirements">
			<Requirement type="quest" quest="ForAllRichMankind_EventExpired" />
			<True>
				<Action type="setVariable" boolVariable="ForAllRichMankind_Expired" boolValue="true" />
			</True>
		</Action>
	</CheckIfEnd>
	<RecommendStoreCategory_ForAllRichMankind ignoreHUD="true">
		<Action type="reparseBuildMenu" />
		<Action type="clearRecommendations" category="Event" name="ForAllRichMankind_ForAllRichMankind_OnePanel" />
		<Action type="recommendation" recType="Event" name="ForAllRichMankind_ForAllRichMankind_OnePanel" eventName="UI_ForAllRichMankind_Title" limitedTime="true" limitedTimeEndDate="ForAllRichMankind_End" />
		<Action type="focusOnMenuItem" menuCategory="FrontPage" />
		<Action type="reparseBuildMenu" />
	</RecommendStoreCategory_ForAllRichMankind>
	<EnterStoreCategory_ForAllRichMankind ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="ForAllRichMankind_Category" />
	</EnterStoreCategory_ForAllRichMankind>
	<ForAllRichMankind_MTX_DisplayPromo ignoreHUD="true">
		<Action type="focusOnMenuItem" menuCategory="Currency" itemName="ForAllRichMankind_TrayOf132Donuts" />
	</ForAllRichMankind_MTX_DisplayPromo>
	<AutoApply_DSHSkin_End parallel="true">
		<Action type="scheduleScript" mode="create" script="ForAllRichMankind_Scripts:AutoApply_DSHSkin_Delayed" relativeTime="2s" localLandOnly="true" shouldSave="true" />
	</AutoApply_DSHSkin_End>
	<AutoApply_DSHSkin_Delayed ignoreHUD="true">
		<Action type="consumable" consumable="Homer_DeepSpace_Con" fromInventory="true" />
		<Action type="pantoobject" character="Homer" />
	</AutoApply_DSHSkin_Delayed>
</ScriptPackage>